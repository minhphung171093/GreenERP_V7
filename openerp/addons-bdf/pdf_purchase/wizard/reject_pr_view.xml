<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		<record id="reject_pr_form_view" model="ir.ui.view">
	        <field name="name">reject.pr.form</field>
	        <field name="model">reject.pr</field>
	        <field eval="20" name="priority"/>
	        <field name="arch" type="xml">
	            <form string="Approve" version="7.0">
	            	<group>
		                <field name="message"/>
		                <field name="request_id" invisible='1'/>
	                </group>
	                <footer>
	                    <button name="bt_reject" type='object' string="Reject" class="oe_highlight"/>
	                    or
	                    <button string="Cancel" special="cancel" />
	                </footer>
	            </form>
	        </field>
    	</record>

	    <record model="ir.actions.act_window" id="action_reject_pr">
	        <field name="name">Reject</field>
	        <field name="res_model">reject.pr</field>
	        <field name="view_type">form</field>
	        <field name="view_mode">form</field>
	        <field name="view_id" ref="reject_pr_form_view" />
	        <field name="target">new</field>
	    </record>
	    
    </data>
</openerp>

