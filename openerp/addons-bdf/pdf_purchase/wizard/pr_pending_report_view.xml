<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record id="view_pr_pending_report_form" model="ir.ui.view">
            <field name="name">pr.pending.report</field>
            <field name="model">pr.pending.report</field>
            <field name="arch" type="xml">
                <form string="PR Pending Report" version="7.0">
                    <group col='4' colspan='2'>
	                	<field name="tu_ngay" required='1'/>
	                	<field name="den_ngay" required='1'/>
                    </group>
                    <footer>
                        <button name="print_report" string="Print" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="action_pr_pending_report" model="ir.actions.act_window">
            <field name="name">PR Pending Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pr.pending.report</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_pr_pending_report_form"/>
            <field name="target">new</field>
        </record>
        
    </data>
</openerp>

