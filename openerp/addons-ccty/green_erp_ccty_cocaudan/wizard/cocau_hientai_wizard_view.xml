<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		<record id="cocau_hientai_form_view" model="ir.ui.view">
	        <field name="name">cocau.hientai.form.view</field>
	        <field name="model">cocau.hientai.form</field>
	        <field name="arch" type="xml">
	            <form string="Cơ cấu hiện tại report" version="7.0">
	            	<group colspan = '2' col = '4'>
	            	<field name="quan_huyen_id" options="{'create': false, 'create_edit': false}" on_change="onchange_quan_huyen()"/>
	            	<field name="phuong_xa_id" options="{'create': false, 'create_edit': false}" on_change="onchange_phuong_xa()" domain="[('quan_huyen_id','=',quan_huyen_id)]" />
	            	<field name="khu_pho_id" options="{'create': false, 'create_edit': false}" on_change="onchange_khu_pho()" domain="[('phuong_xa_id','=',phuong_xa_id)]"/>
	                <field name="ten_ho_id" context="{'search_ten_ho_id_wizard':1, 'quan_huyen_id': quan_huyen_id, 'phuong_xa_id': phuong_xa_id, 'khu_pho_id': khu_pho_id}" options="{'create': false, 'create_edit': false}"/>
	                <field name="tu_ngay" />
	                <field name="den_ngay" />
	                </group>
	                <footer>
	                    <button name="print_report" type='object' string="OK" class="oe_highlight"/>
	                    or
	                    <button string="Cancel" class="oe_highlight" special="cancel" />
	                </footer>
	            </form>
	        </field>
    	</record>

	    <record model="ir.actions.act_window" id="action_cocau_hientai_form">
	        <field name="name">Lịch sử cơ cấu đàn</field>
	        <field name="res_model">cocau.hientai.form</field>
	        <field name="view_type">form</field>
	        <field name="view_mode">form</field>
	        <field name="view_id" ref="cocau_hientai_form_view" />
	        <field name="target">new</field>
	    </record>
	    
	    <menuitem id="co_cau" name="Quản lý cơ cấu đàn"/>
	    <menuitem id="thongke_baocao" parent="co_cau" name="Thống kê báo cáo cơ cấu đàn" sequence = '2'/>
    		<menuitem action="action_cocau_hientai_form" id="menu_action_cocau_hientai_form" parent="thongke_baocao" sequence = '1'/>
        
	 
	    
    </data>
</openerp>

