<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data noupdate="0">
		<record id="nhap_xuat_canh_giasuc_rule" model="ir.rule">
            <field name="name">multi_company_nhap_xuat_canh_giasuc_rule</field>
            <field model="ir.model" name="model_id" ref="model_nhap_xuat_canh_giasuc"/>
            <field name="domain_force">['|','|',('company_id','=',False),('company_id','child_of',[user.company_id.id]),('company_id','child_of',[u.id for u in user.company_ids])]</field>
        </record>
    </data>
        
    <data noupdate="0">   
     
        <record model="ir.module.category" id="module_category_nhapxuat">
	        <field name="name">Nhập Xuất Gia Súc</field>
	        <field name="sequence">0</field>
	    </record>
		
		<record id="group_nhapxuat_user" model="res.groups">
	        <field name="name">Người Dùng</field>
	        <field name="category_id" ref="module_category_nhapxuat"/>
	        <field name="users" eval="[(4, ref('base.user_root'))]"/>
	        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
	    </record>
        
        <record id="group_nhapxuat_manager" model="res.groups">
	        <field name="name">Quản Lý</field>
	        <field name="category_id" ref="module_category_nhapxuat"/>
	        <field name="users" eval="[(4, ref('base.user_root'))]"/>
	        <field name="implied_ids" eval="[(4, ref('green_erp_ccty_nhapxuatquacanh.group_nhapxuat_user'))]"/>
	    </record>
	    
        <record id="green_erp_ccty_base.group_base_admin_ccty" model="res.groups">
	        <field name="implied_ids" eval="[(4, ref('green_erp_ccty_nhapxuatquacanh.group_nhapxuat_manager'))]"/>
	    </record>
	    
	</data>
</openerp>
