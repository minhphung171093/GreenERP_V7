<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data noupdate="0">
		<record id="tiem_phong_rule" model="ir.rule">
            <field name="name">multi_company_tiem_phong_rule</field>
            <field model="ir.model" name="model_id" ref="model_tiem_phong"/>
            <field name="domain_force">['|','|',('tram_id','=',False),('tram_id','child_of',[user.company_id.id]),('tram_id','child_of',[u.id for u in user.company_ids])]</field>
        </record>
    
        <record id="tiem_phong_lmlm_rule" model="ir.rule">
            <field name="name">multi_company_tiem_phong_lmlm_rule</field>
            <field model="ir.model" name="model_id" ref="model_tiem_phong_lmlm"/>
            <field name="domain_force">['|','|',('tram_id','=',False),('tram_id','child_of',[user.company_id.id]),('tram_id','child_of',[u.id for u in user.company_ids])]</field>
        </record>
        
    </data>
        
    <data noupdate="0">    
        <record model="ir.module.category" id="module_category_tiemphong">
	        <field name="name">Tiêm Phòng</field>
	        <field name="sequence">0</field>
	    </record>
		
		<record id="group_tiemphong_user" model="res.groups">
	        <field name="name">Người Dùng</field>
	        <field name="category_id" ref="module_category_tiemphong"/>
	        <field name="users" eval="[(4, ref('base.user_root'))]"/>
	        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
	    </record>
        
        <record id="group_tiemphong_manager" model="res.groups">
	        <field name="name">Quản Lý</field>
	        <field name="category_id" ref="module_category_tiemphong"/>
	        <field name="users" eval="[(4, ref('base.user_root'))]"/>
	        <field name="implied_ids" eval="[(4, ref('green_erp_ccty_tiemphong.group_tiemphong_user'))]"/>
	    </record>
	    
        <record id="green_erp_ccty_base.group_base_admin_ccty" model="res.groups">
	        <field name="implied_ids" eval="[(4, ref('green_erp_ccty_tiemphong.group_tiemphong_manager'))]"/>
	    </record>
	    
	</data>
</openerp>
