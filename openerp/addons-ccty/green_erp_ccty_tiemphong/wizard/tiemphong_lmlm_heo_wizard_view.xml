        <menuitem id="menu_thong_ke_tiem_phong_lmlm" parent="tiem_phong" name="Thống kê tiêm phòng" sequence = '2'/>
	    	<menuitem id="menu_action_tiemphong_lmlm_heo_form" parent="menu_thong_ke_tiem_phong_lmlm" name="Theo hộ (heo)" action="action_tiemphong_lmlm_heo_form" sequence = '2'/>  -->
	 
	    
    </data>
</openerp>

