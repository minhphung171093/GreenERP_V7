<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate='0'>

	    <record model="ir.rule" id="sale_order_multi_branch_rule">
	        <field name="name">Sale Order Multil-Branch</field>
	        <field name="model_id" ref="sale.model_sale_order"/>
	        <field name="global" eval="True"/>
	        <field name="domain_force">[user.context_shop_id and ('shop_id','=',user.context_shop_id.id) or ('shop_id','child_of', [x.id for x in user.shop_ids])]</field>
	    </record>
	    
	    <record model="ir.rule" id="sale_shop_multi_branch_rule">
	        <field name="name">Sale Shop Multil-Branch</field>
	        <field name="model_id" ref="sale.model_sale_shop"/>
	        <field name="global" eval="True"/>
	        <field name="domain_force">[('id','in', [x.id for x in user.shop_ids])]</field>
	    </record>
	    
	    <record model="ir.rule" id="partner_nhanvienkinhdoanh_rule">
	        <field name="name">partner NVKD</field>
	        <field name="model_id" ref="base.model_res_partner"/>
	        <field name="groups" eval="[(6,0,[ref('base.group_sale_salesman')])]"/>
	        <field name="domain_force">['|','|',('user_id','=', user.id),('id','=', user.partner_id.id),('id','=', user.company_id.partner_id.id)]</field>
	    </record>
	    
	    <record model="ir.rule" id="partner_sale_all_rule">
	        <field name="name">partner Sale All</field>
	        <field name="model_id" ref="base.model_res_partner"/>
	        <field name="groups" eval="[(6,0,[ref('base.group_sale_salesman_all_leads')])]"/>
	        <field name="domain_force">[(1,'=', 1)]</field>
	    </record>
	    
    </data>
</openerp>
