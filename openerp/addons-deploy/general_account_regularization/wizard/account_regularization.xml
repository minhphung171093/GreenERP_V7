<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    	<record model='ir.ui.view' id='view_wizard_regularize_tree'>
            <field name="name">view.wizard.regularize.tree</field>
            <field name="model">wizard.regularize</field>
            <field name="arch" type="xml">
                <tree string="Accounts Regularization">
                    <field name="balance_calc"/>
					<field name="journal_id" />
					<field name="period_id" />
					<field name="date_move" />
					<field name="date_to" attrs="{'invisible':[('balance_calc','=','period')],'required':[('balance_calc','=','date')]}"/>
					<!--<newline/>
					<field name="periods" colspan="4" attrs="{'invisible':[('balance_calc','=','date')],'required':[('balance_calc','=','period')]}"/>
					-->
					<field name="state" />
                </tree>
            </field>
        </record>
    
        <record id="view_wizard_regularize_form" model="ir.ui.view">
            <field name="name">view.wizard.regularize.form</field>
            <field name="model">wizard.regularize</field>
            <field name="arch" type="xml">
                <form string="Accounts Regularization" version="7.0">
                	<header>
	                    <button string="Kết chuyển" states="draft" name="regularize" type="object" class="oe_highlight"/>
	                	<button name="bt_huy" string="Hủy" states="done" type="object" />
                		<field name="state" widget="statusbar" statusbar_visible="draft,done,cancel"/>
	                </header>
                	<group colspan="4" col="2">
	                	<field name="balance_calc"/>
						<field name="journal_id" required = '0' invisible = '1'/>
						<field name="period_id" />
						<field name="date_move" required = '0' invisible = '1'/>
						<field name="date_to" attrs="{'invisible':[('balance_calc','=','period')],'required':[('balance_calc','=','date')]}"/>
						<!--<newline/>
						<field name="periods" colspan="4" attrs="{'invisible':[('balance_calc','=','date')],'required':[('balance_calc','=','period')]}"/>
						-->
					</group>
					<group col="1">
	                    <field name="acc_move_ids" nolabel="1" invisible = '1'>
	                    	<tree>
	                    		<field name="journal_id"/>
	                    		<field name="period_id"/>
	                    		<field name="regularization_id"/>
	                    		<field name="company_id"/>
	                    		<field name="state" invisible = '1'/>
	                    	</tree>
	                    </field>
	                 </group>
                 </form>
           </field>
        </record>
		
		<record id="action_view_wizard_regularize_form" model="ir.actions.act_window">
            <field name="name">Regularize Accounts</field>
            <field name="res_model">wizard.regularize</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_wizard_regularize_tree"/>
            <field name="target">current</field>
        </record>
        
    </data>
</openerp>
