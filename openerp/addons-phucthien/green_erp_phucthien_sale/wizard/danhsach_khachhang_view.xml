<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_danhsach_khachhang_form" model="ir.ui.view">
            <field name="name">danhsach.khachhang.form</field>
            <field name="model">danhsach.khachhang</field>
            <field name="arch" type="xml">
                <form string="Danh sách khách hàng" version="7.0">
                    <group string="Nhóm sản phẩm">
                        <field name="categ_ids" nolabel='1'/>
                    </group>
                    <footer>
                        <button name="print_report" string="In" type="object" class="oe_highlight"/>
                        or
                        <button string="Hủy bỏ" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_danhsach_khachhang">
	        <field name="name">Danh sách khách hàng</field>
	        <field name="res_model">danhsach.khachhang</field>
	        <field name="view_type">form</field>
	        <field name="view_mode">form</field>
	        <field name="view_id" ref="view_danhsach_khachhang_form" />
	        <field name="target">new</field>
	    </record>

    </data>
</openerp>

