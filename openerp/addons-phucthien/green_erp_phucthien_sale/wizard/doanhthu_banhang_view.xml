<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_doanhthu_banhang_form" model="ir.ui.view">
            <field name="name">doanhthu.banhang.form</field>
            <field name="model">doanhthu.banhang</field>
            <field name="arch" type="xml">
                <form string="Doanh thu bán hàng" version="7.0">
                	<sheet>
	                    <group col='4' colspan='2'>
	                    	<field name="date_from"/>
	                        <field name="date_to"/>
	                        <field name="categ_ids" widget="many2many_tags" attrs="{'readonly':[('user_id','=',24)]}"/>
	                        <field name="loc_ids" widget="many2many_tags"/>
	                        <field name="nsx_ids" widget="many2many_tags"/>
	                        <field name="khu_vuc_ids" widget="many2many_tags"/>
	                        <field name="tinh_ids" widget="many2many_tags"/>
	                        <field name="users_ids" widget="many2many_tags" context="{'search_nhanvien_id':True,'uid':uid}"/>
	                        <field name="partner_ids" domain="[('customer','=',True)]" colspan='4'/>
	                        <field name="product_ids" colspan='4'/>
	                        <field name="user_id" invisible = '1'/>
	                    </group>
	                </sheet>
                    <footer>
                        <button name="print_report" string="In" type="object" class="oe_highlight"/>
                        <button name="review_report" string="Xem trước" type="object" class="oe_highlight"/>
                        or
                        <button string="Hủy bỏ" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_doanhthu_banhang">
	        <field name="name">Doanh thu bán hàng</field>
	        <field name="res_model">doanhthu.banhang</field>
	        <field name="view_type">form</field>
	        <field name="view_mode">form</field>
	        <field name="view_id" ref="view_doanhthu_banhang_form" />
	        <field name="context">{'default_users_ids':[(6,0,[uid])]}</field>
	        <field name="target">new</field>
	    </record>
	    
<!--  ========================= Báo cáo doanh thu bán hàng Review ================= -->     
	     <record id="report_doanhthu_banhang_review" model="ir.ui.view">
	        <field name="name">report.doanhthu.banhang.review</field>
	        <field name="model">doanhthu.banhang.review</field>
	        <field name="arch" type="xml">
	            <form string="Doanh thu bán hàng Review" version="7.0">
	            	<header>
	                    <button string="Print (.xls)" type="object" name="print_xls" context="{'type_report':'tax_vat_input'}" icon='gtk-execute'/>
	                </header>
	                <sheet>
	            		<div class="oe_text_center">
	            			<h2>
            				<b>Báo cáo doanh thu bán hàng</b>
            				</h2>
            			</div>
            			<div class="oe_text_center">
            				<label for="tu_ngay" class = 'oe_inline'/>
            				<field name="tu_ngay" class = 'oe_inline'/>
            				<label for="den_ngay" class = 'oe_inline'/>
            				<field name="den_ngay" class = 'oe_inline'/>
            			</div>
	                	<div class='oe_green_erp_scroll' >
		                	<field name="doanhthu_banhang_review_line" nolabel='1'>
		                		<tree create="false" edit="false" delete="false">          
		                			<field name="ngay_hd"/>
		                			<field name="so_hd"/>
		                			<field name="ten_kh"/>
		                			<field name="dia_chi"/>
		                			<field name="ten_sp"/>
		                			<field name="hang_sx"/>
		                			<field name="dvt"/>
		                			<field name="so_lo"/>
		                			<field name="hsd"/>
		                			<field name="so_luong"/>
		                			<field name="gia_ban"/>
		                			<field name="doanhthu_truocthue"/>
		                			<field name="doanhthu_sauthue"/>
		                			<field name="ti_le"/>
		                		</tree>
		                	</field>
		                </div>
			       </sheet>       	                	
	            </form>
	        </field>
	    </record>
	    
	    <record id="greenerp_report_report_account_in_out_tax_review" model="greenerp.report">
	        <field name="name">report_account_in_out_tax_review</field>
	        <field name="delete_after">7</field>
	    </record>	  

    </data>
</openerp>

