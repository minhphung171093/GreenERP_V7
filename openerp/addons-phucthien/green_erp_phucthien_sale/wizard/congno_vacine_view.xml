<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_congno_vacine_form" model="ir.ui.view">
            <field name="name">congno.vacine.form</field>
            <field name="model">congno.vacine</field>
            <field name="arch" type="xml">
                <form string="Công Nợ Vacine" version="7.0">
                    <group>
                    	<field name="date_from"/>
                    	<field name="user_id" widget="many2many_tags" groups='base.group_sale_salesman_all_leads'/>
                    </group>
                    <footer>
                        <button name="print_report" string="In" type="object" class="oe_highlight"/>
                        or
                        <button string="Hủy bỏ" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_congno_vacine">
	        <field name="name">Công Nợ Vacine</field>
	        <field name="res_model">congno.vacine</field>
	        <field name="view_type">form</field>
	        <field name="view_mode">form</field>
	        <field name="view_id" ref="view_congno_vacine_form" />
	        <field name="target">new</field>
	    </record>
	    
	    <record id="view_congno_mypham_form" model="ir.ui.view">
            <field name="name">congno.mypham.form</field>
            <field name="model">congno.mypham</field>
            <field name="arch" type="xml">
                <form string="Công Nợ Mỹ Phẩm" version="7.0">
                    <group>
                    	<field name="period_id" options="{'create': false, 'create_edit': false}"/>
                    	<field name="user_ids" widget="many2many_tags" groups='base.group_sale_salesman_all_leads'/>
                    </group>
                    <footer>
                        <button name="print_report" string="In" type="object" class="oe_highlight"/>
                        or
                        <button string="Hủy bỏ" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_congno_mypham">
	        <field name="name">Công Nợ Mỹ Phẩm</field>
	        <field name="res_model">congno.mypham</field>
	        <field name="view_type">form</field>
	        <field name="view_mode">form</field>
	        <field name="view_id" ref="view_congno_mypham_form" />
	        <field name="target">new</field>
	    </record>
	    
	    <record id="view_congno_duocpham_form" model="ir.ui.view">
            <field name="name">congno.duocpham.form</field>
            <field name="model">congno.duocpham</field>
            <field name="arch" type="xml">
                <form string="Công Nợ Dược Phẩm" version="7.0">
                    <group>
                    	<field name="period_id" options="{'create': false, 'create_edit': false}"/>
                    	<field name="user_ids" widget="many2many_tags" groups='base.group_sale_salesman_all_leads'/>
                    </group>
                    <footer>
                        <button name="print_report" string="In" type="object" class="oe_highlight"/>
                        or
                        <button string="Hủy bỏ" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_congno_duocpham">
	        <field name="name">Công Nợ Dược Phẩm</field>
	        <field name="res_model">congno.duocpham</field>
	        <field name="view_type">form</field>
	        <field name="view_mode">form</field>
	        <field name="view_id" ref="view_congno_duocpham_form" />
	        <field name="target">new</field>
	    </record>

    </data>
</openerp>

