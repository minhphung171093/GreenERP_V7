<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<record id="view_quotation_tree_inherit" model="ir.ui.view">
            <field name="name">sale.order.tree.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="priority">4</field>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='state']" position="after">
          			<field name='sale_reason_peding_ids' widget='many2many_tags'/>
          			<field name='huy_ids' widget='many2many_tags'/>
            	</xpath>
            </field>
        </record>
        
        <record id="view_sales_order_filter_inherit" model="ir.ui.view">
            <field name="name">sale.order.list.select.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
            	<xpath expr="//filter[@string='Order Date']" position="after">
          			<filter string="Reason Pending" icon="terp-go-month" domain="[]" context="{'group_by':'sale_reason_peding_id'}"/>
          			<filter string="Người chịu trách nhiệm" icon="terp-go-month" domain="[]" context="{'group_by':'chiu_trach_nhiem_id'}"/>
            	</xpath>
            	<xpath expr="//field[@name='user_id']" position="after">
          			<field name="chiu_trach_nhiem_id"/>
          			<field name="product_id_rel"/>
            	</xpath>
                <xpath expr="//group/filter[@string='Status']" position="replace">
                    <filter string="Trạng thái" domain="[]" context="{'group_by':'trang_thai'}"/>
                </xpath>      
                <xpath expr="//filter[@name='draft']" position="replace">
                    <filter name="draft" string="Dự thảo báo giá" domain="[('trang_thai','=','draft')]"/>
                </xpath>        
                <xpath expr="//filter[@string='Done']" position="replace">
                    <filter name="done" string="Hoàn tất" domain="[('trang_thai','=','done')]"/>
                </xpath>     
                <xpath expr="//filter[@name='sales']" position="replace">
                </xpath>        
                <xpath expr="//filter[@string='To Invoice']" position="replace">
                </xpath>      
                <xpath expr="//filter[@name='draft']" position="after">
                    <filter name="sent" string="Đơn hàng đã gửi đi" domain="[('trang_thai','=','sent')]"/>
                    <filter name="progress" string="Đơn bán hàng" domain="[('trang_thai','=','progress')]"/>
                    <filter name="cho_giaohang" string="Chờ giao hàng" domain="[('trang_thai','=','cho_giaohang')]"/>
                    <filter name="cho_hd" string="Chờ hoá đơn" domain="[('trang_thai','=','cho_hd')]"/>    
                    <filter name="cho_thanhtoan" string="Chờ giao hàng" domain="[('trang_thai','=','cho_thanhtoan')]"/>
                    <filter name="cancel" string="Đã huỷ bỏ" domain="[('trang_thai','=','cancel')]"/>                                        
                </xpath>                                           	
            </field>
       </record>

		<record id="view_order_tree_inherit" model="ir.ui.view">
            <field name="name">sale.order.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
          		<xpath expr="//field[@name='state']" position="attributes">
                	<attribute name="invisible">1</attribute>
                </xpath>
          		<xpath expr="//field[@name='state']" position="before">
                	<field name="trang_thai" />
                </xpath>
            </field>
        </record>
        
		<record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
          		<xpath expr="//field[@name='partner_id']" position="after">
          			<field name='product_category_id'/>
          			<field name='hop_dong_nt_id' domain="[('type','=','nguyen_tac'),('partner_id','=',partner_id),('state','=','da_nhan')]"/>
          			<field name='hop_dong_t_id' domain="[('type','=','thau'),('partner_id','=',partner_id),('state','=','da_nhan')]"/>
            	</xpath>
            	<xpath expr="//button[@name='action_button_confirm']" position="after">
            		 <button name="chiu_trach_nhiem" attrs="{'invisible':['|',('state','not in',['draft','sent']),('chiu_trach_nhiem_id','!=',False)]}" string="Chịu trách nhiệm" class="oe_highlight" type="object"/>
          			 <button name="duyet_khong_dieukien" states="draft,sent" string="Duyệt vượt cấp" class="oe_highlight" type="object" groups="green_erp_phucthien_sale.group_duyet_banhang_khong_dieukien"/>
            	</xpath>
            	<xpath expr="//button[@name='print_quotation']" position="replace">
	    			<button name="print_sale_order" string="Để nghị xuất hàng" type="object"/>
	            </xpath>
		            
		    	<xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position="replace">
		        	<field name="price_subtotal" string="Thành tiền" invisible="0"/>
		        </xpath>
		        
				<xpath expr="//field[@name='note']" position="after">
		        	<group>
		        		<field name='chiu_trach_nhiem_id'/>
		        		<field name='nv_duyet_id'/>
		        		<field name='tp_duyet_id'/>
		        		<field name='sale_reason_peding_ids' widget='many2many_tags'/>
		        		<field name='huy_ids' widget='many2many_tags'/>
		        	</group>
		        </xpath>
		        <xpath expr="//field[@name='payment_term']" position="after">
                	<field name="payment_mode_id" widget="selection"/>
                </xpath>
                
                <xpath expr="//button[@name='action_cancel']" position="replace">
                	<button name="action_cancel" states="manual,progress,done" string="Cancel Order" type="object" groups="base.group_user"/>
            	</xpath>
		     	<xpath expr="//field[@name='partner_id']" position="after">
                	<field name="dia_chi_kh" />
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="replace">
                	<field name="partner_shipping_id" invisible='1' groups="sale.group_delivery_invoice_address" context="{'default_type':'delivery'}"/>
                	<field name="diachi_giaohang_id" domain="[('partner_id','=',partner_id)]"/>
                </xpath>
          		<xpath expr="//field[@name='state']" position="attributes">
                	<attribute name="invisible">1</attribute>
                </xpath>
          		<xpath expr="//field[@name='state']" position="before">
                	<field name="trang_thai" widget="statusbar" statusbar_visible="draft,sent,progress,done,cho_giaohang"/>
                </xpath>
            </field>
        </record>
        
        <record id="view_partner_tree_inherit" model="ir.ui.view">
            <field name="name">res.partner.tree.inherit</field>
            <field name="model">res.partner</field>
            <field eval="9" name="priority"/>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree[@string='Contacts']" position="attributes">
                	<attribute name="colors">gray:gp_gan_hh== False;red:gp_gan_hh== True</attribute>
                </xpath>
                <xpath expr="//field[@name='parent_id']" position="after">
                	<field name="gp_gan_hh" invisible="1"/>
                    <field name="state_id" domain="[]" invisible="1"/>
