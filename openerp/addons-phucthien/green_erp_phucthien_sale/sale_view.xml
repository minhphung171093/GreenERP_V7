	                </page>
            	</xpath>
            	<!--<xpath expr="//field[@name='credit_limit']" position="after">
            		<field name='so_ngay_no'/>
            	</xpath>-->
            	<xpath expr="//field[@name='email']" position="after">
            		<field name='so_cmnd' attrs="{'invisible': [('is_company','=',True)]}"/>
            		<field name='is_hop_dong'/>
            	</xpath>
            </field>
        </record>
		
