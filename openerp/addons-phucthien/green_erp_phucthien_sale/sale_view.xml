               <field name="date_end"/>
               <field name="user_ids"/>
               <field name="gan_cho"/>
               <field name="noidung_chinh_id"/>
               <field name="partner_id"/>
               <separator/>
               <filter icon="terp-gtk-go-back-rtl" string="Open" name="open" domain="[('state','=','open')]"/>
               <filter icon="terp-gtk-go-back-rtl" string="Done" name="done" domain="[('state','=','done')]"/>
               <filter icon="terp-gtk-go-back-rtl" string="Cancel" name="cancel" domain="[('state','=','cancel')]"/>
               <separator/>
               <group expand="0" string="Group By...">
                   <filter string="Gán cho" icon="terp-partner" domain="[]" context="{'group_by':'gan_cho'}"/>
                   <filter string="Khách hàng" icon="terp-partner" domain="[]" context="{'group_by':'partner_id'}"/>
                   <filter string="Nội dung chính" icon="terp-partner" domain="[]" context="{'group_by':'noidung_chinh_id'}"/>
                   <filter string="Trạng thái" icon="terp-go-month" domain="[]" context="{'group_by':'state'}"/>
