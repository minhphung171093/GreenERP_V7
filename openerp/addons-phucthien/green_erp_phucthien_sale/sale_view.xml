          					</group>
          					<group colspan='2'>
          						<field name='gptn'/>
          						<field name='date_gptn' attrs="{'invisible': [('gptn','=',False)]}"/>
          					</group>
          					<group colspan='2'>
          						<field name='gdp' />
          						<field name='date_gdp' attrs="{'invisible': [('gdp','=',False)]}"/>
          					</group>
          					<group colspan='2'>
          						<field name='gpp' />
          						<field name='date_gpp' attrs="{'invisible': [('gpp','=',False)]}"/>
          					</group>
          					<group colspan='2'>
