          				</field>
	                </page>
	                <page string="Danh sách sản phẩm cạnh tranh" attrs="{'invisible': [('customer','=',False)]}">
          				<header>
          					<button name="bt_create_sp_canhtranh" string="Tạo sản phẩm cạnh tranh" class="oe_highlight" type="object"/>
          				</header>
          				
          				<field name = "danhsach_canhtranh_ids" >
          					<tree editable='top'>
          						<field name="name" />
								<field name="product_id" />
								<field name="qty"/>
								<field name="qty_con_lai"/>
