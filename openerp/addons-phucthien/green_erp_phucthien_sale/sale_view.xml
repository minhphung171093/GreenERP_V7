		                    <group>
			                    <field name="date_start" on_change = "onchange_ngay_canh_bao(date_start, thoigian_dukien)"/>
			                    <field name="date_end"/>
               					<field name="partner_id"/>
               					<field name="lydo_huy"/>
               					<field name="email_start_date" invisible = '1'/>
               					<field name="email_end_date" invisible = '1'/>
		                    </group>
                    	</group>
	                    <group>
	                   		<field name="note"/>
	                    </group>
	                </sheet>
	                <div class="oe_chatter">
