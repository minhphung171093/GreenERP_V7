<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record id="view_xuly_hangtra_cuakhachhang" model="ir.ui.view">
            <field name="name">view.xuly.hangtra.cuakhachhang</field>
            <field name="model">xuly.hangtra.cuakhachhang</field>
            <field name="arch" type="xml">
                <form string="Xử lý hàng trả của khách hàng" version="7.0">
                	<group>
                		<field name="name" />
                		<field name="picking_in_id" domain="[('type','=','in'),('return','=','none'),('state','=','done')]" attrs="{'invisible': [('name','!=','trahang_ncc')],'required': [('name','=','trahang_ncc')]}" />
                	</group>
                    <footer>
                        <button name="mo_phieu_nhap" string="Mở phiếu nhập" attrs="{'invisible': [('name','!=','trahang_ncc')]}" type="object" class="oe_highlight" />
                        <button name="taophieu_chuyenkhohuy" string="Tạo phiếu chuyển kho hàng hủy" attrs="{'invisible': [('name','!=','huy_hang')]}" type="object" class="oe_highlight" />
                        hoặc
                        <button string="Hủy bỏ" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="action_xuly_hangtra_cuakhachhang" model="ir.actions.act_window">
            <field name="name">Xử lý hàng trả của khách hàng</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">xuly.hangtra.cuakhachhang</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_xuly_hangtra_cuakhachhang"/>
            <field name="target">new</field>
        </record>
        
    </data>
</openerp>

