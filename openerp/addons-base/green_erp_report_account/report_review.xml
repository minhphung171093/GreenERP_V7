<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
 <!--  ========================= Create General Account VAT IN Report Review ================= -->     
         <record id="report_tax_vat_input_review" model="ir.ui.view">
            <field name="name">report.tax.vat.input.review</field>
            <field name="model">report.account.in.out.tax.review</field>
            <field name="arch" type="xml">
                <form string="Tax VAT INPUT Review" version="7.0">
                	<header>
                        <button string="Print (.xls)" type="object" name="print_xls" context="{'type_report':'tax_vat_input'}" icon='gtk-execute'/>
                    </header>
                	<group col="4" colspan="2">
                		<field name="nguoi_nop_thue"/>
                		<field name="ms_thue"/>
                    </group>
                </form>
            </field>
        </record>
        
        <record id="greenerp_report_report_account_in_out_tax_review" model="greenerp.report">
            <field name="name">report_account_in_out_tax_review</field>
            <field name="delete_after">7</field>
        </record>
		
 <!--  ========================= Create Account Ledger Report Review ================= -->     
         <record id="account_ledger_report_review" model="ir.ui.view">
            <field name="name">gen.account.ledger.report.review</field>
            <field name="model">account.ledger.report.review</field>
            <field name="arch" type="xml">
                <form string="Account Ledger Review" version="7.0">
                	<header>
                        <button string="Print (.xls)" type="object" name="print_xls" icon='gtk-execute'/>
                    </header>
                	<group class="oe_left">
                		<field name="don_vi"/>
                		<field name="dia_chi"/>
                		<field name="ms_thue"/>
                    </group>
                	<div class="oe_text_center">
                    	<b> SỔ CÁI </b>
                	</div>
                	<group>
	                	<div class="oe_text_center">
	                		<label for="account_code" class="oe_inline"/>
	                		<field name="account_code" class="oe_inline"/>
	                		<field name="account_name" nolabel="1" class="oe_inline"/>
	                	</div>
	                </group>
	                
            		<div class="oe_text_center">
            			<label for="date_from" class="oe_inline"/>
                		<field name="date_from" class="oe_inline"/>
                		<label for="date_to" class="oe_inline"/>
                		<field name="date_to" class="oe_inline"/>
                	</div>
                    <div class="oe_right">
                		ĐVT: Đồng
                    </div>
                    <field name="ledger_review_line" nolabel='1'>
                    	<tree>
                    		<field name="ngay_ghso"/>
	                		<field name="ngay_thang"/>
	                		<field name="so_hieu"/>
	                		<field name="dien_giai"/>
	                		<field name="tk_doi_ung"/>
	                		<field name="so_ps_no"/>
	                		<field name="so_ps_co"/>
                    	</tree>
                    </field>
                    	
                </form>
            </field>
        </record>
        
        <record id="greenerp_report_account_ledger_report_review" model="greenerp.report">
            <field name="name">gen_account_ledger_report_review</field>
            <field name="delete_after">7</field>
        </record>
        
 <!--  ========================= Create Account Detail Ledger Report Review ================= -->     
         <record id="account_detail_ledger_report_review" model="ir.ui.view">
            <field name="name">detail.account.ledger.report.review</field>
            <field name="model">account.ledger.report.review</field>
            <field name="arch" type="xml">
                <form string="Account Detail Ledger Review" version="7.0">
                	<header>
                        <button string="Print (.xls)" type="object" name="print_detail_xls" icon='gtk-execute'/>
                    </header>
                	<group class="oe_left">
                		<field name="don_vi"/>
                		<field name="dia_chi"/>
                		<field name="ms_thue"/>
                    </group>
                	<div class="oe_text_center">
                    	<b> SỔ CÁI </b>
                    	<b> (Dùng cho hình thức kế toán Chứng từ ghi sổ) </b>
                	</div>
                	<group>
	                	<div class="oe_text_center">
	                		<label for="account_code" class="oe_inline"/>
	                		<field name="account_code" class="oe_inline"/>
	                		<field name="account_name" nolabel="1" class="oe_inline"/>
	                	</div>
	                </group>
	                
            		<div class="oe_text_center">
            			<label for="date_from" class="oe_inline"/>
                		<field name="date_from" class="oe_inline"/>
                		<label for="date_to" class="oe_inline"/>
                		<field name="date_to" class="oe_inline"/>
                	</div>
                    <div class="oe_right">
                		ĐVT: Đồng
                    </div>
                    <field name="ledger_review_line" nolabel='1'>
                    	<tree>
                    		<field name="ngay_ghso"/>
                    		<field name="so_hieu"/>
	                		<field name="ngay_thang"/>
	                		<field name="dien_giai"/>
	                		<field name="tk_doi_ung"/>
	                		<field name="so_ps_no"/>
	                		<field name="so_ps_co"/> 
	                		<field name="ghi_chu"/>
                    	</tree>
                    </field>
                    	
                </form>
            </field>
        </record>
        
        <record id="greenerp_report_account_detail_ledger_report_review" model="greenerp.report">
            <field name="name">account_detail_ledger_report_review</field>
            <field name="delete_after">7</field>
        </record>
        
   </data>
</openerp>
        
        