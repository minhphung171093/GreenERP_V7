<?xml version="1.0" encoding="UTF-8"?>
<templates id="web.template" xml:space="preserve">
<t t-name="Login">
    <div class="oe_login">
        <div class="oe_login_bottom"> </div>
        <div class="oe_login_error_message"/>
        <div class="oe_login_pane">
            <div class="oe_login_logo"><img src='/green_erp_base/static/src/img/logo2.png'/></div>
            <form action="" method="post">
                <div class="oe_login_dbpane" >
                    Database:
                    <input name="db" t-att-value="widget.selected_db || ''"/>
                </div>
                <ul>
                    <li>Username</li>
                    <li><input name="login" type="text" value="" autofocus="autofocus"/></li>
                    <li>Password</li>
                    <li><input name="password" type="password" value=""/></li>
                    <li><button name="submit">Log in</button></li>
                </ul>
            </form>
            <div class="oe_login_footer">
            </div>
        </div>
    </div>
</t>
<t t-name="UserMenu">
    <span class="oe_user_menu oe_topbar_item oe_dropdown_toggle oe_dropdown_arrow">
        <img class="oe_topbar_avatar" t-att-data-default-src="_s + '/web/static/src/img/user_menu_avatar.png'"/>
        <span class="oe_topbar_name"/>
        <ul class="oe_dropdown_menu">
            <li><a href="#" data-menu="settings">Preferences</a></li>
            <li><a href="#" data-menu="logout">Log out</a></li>
        </ul>
    </span>
</t>
<t t-name="WebClient">
    <div class="openerp openerp_webclient_container">
    <table class="oe_webclient">
        <tr>
            <td colspan="2" class="oe_topbar">
                <div class="oe_menu_placeholder"/>
                <div class="oe_user_menu_placeholder"/>
                <div class="oe_systray"/>
            </td>
        </tr>
        <tr>
            <td class="oe_leftbar" valign="top">
                <t t-set="debug" t-value="__debug__ ? '&amp;debug' : ''"/>
                <a class="oe_logo" t-attf-href="/?ts=#{Date.now()}#{debug}">
                    <span class="oe_logo_edit">Edit Company data</span>
                    <img t-att-src='widget.session.url("/web/binary/company_logo")'/>
                </a>
                <div class="oe_secondary_menus_container"/>
                <div class="oe_footer">
                </div>
            </td>
            <td class="oe_application">
            </td>
        </tr>
    </table>
    </div>
</t>

<div t-name="SearchView.advanced" class="oe_searchview_advanced">
</div>

<div t-name="SearchView.addtodashboard" class="oe_searchview_dashboard">
</div>

<div t-name="SearchView.CustomFilters" class="oe_searchview_custom oe_searchview_section">
    <div>
        <h3><span class="oe_i">M</span> Saved Layout</h3>
        <ul class="oe_searchview_custom_list"/>
        <div class="oe_searchview_custom">
            <h4>Create New Layout</h4>
            <form class="oe_form">
                <p class="oe_form_required"><input id="oe_searchview_custom_input" placeholder="Filter name"/></p>
                <p>
                    <input id="oe_searchview_custom_public" type="checkbox"/>
                    <label for="oe_searchview_custom_public">Share with all users</label>
                    <input id="oe_searchview_custom_default" type="checkbox"/>
                    <label for="oe_searchview_custom_default">Use by default</label>
                </p>
                <button>Save</button>
            </form>
        </div>
    </div>
</div>

<t t-name="mail.ComposeMessageTopButton">
    <div title='Compose new Message' class="oe_topbar_item oe_topbar_compose_full_email">
    </div>
</t>

<t t-name="WebClient.timezone_systray">
    <div class="oe_topbar_item oe_timezone_systray" title="Timezone mismatch">
    </div>
</t>

<t t-extend="Sidebar">
    <t t-jquery="a.oe_sidebar_action_a" t-operation="replace">
	    <a t-if="item.label !== 'Export'" class="oe_sidebar_action_a" t-att-title="item.title or ''" t-att-data-section="section.name" t-att-data-index="item_index" t-att-href="item.url" target="_blank">
	        <t t-raw="item.label"/>
	    </a>
    </t>
</t>

</templates>
