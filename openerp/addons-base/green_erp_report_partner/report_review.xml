<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
<!--  ========================= Aged Partner Balance Review ================= -->     
        <record id="report_aged_partner_balance_review" model="ir.ui.view">
            <field name="name">report.aged.partner.balance.review</field>
            <field name="model">general.aged.partner.balance.review</field>
            <field name="arch" type="xml">
                <form string="Aged Partner Balance Review" version="7.0">
                	<header>
                        <button string="Print (.xls)" type="object" name="print_xls" icon='gtk-execute'/>
                    </header>
                    <sheet>
                    <group class = 'oe_left'>
                		<field name="name" nolabel = '1'/>
                		<field name="address_company" nolabel = '1'/>
                		<field name="vat_company"/>
                    </group>
                    
                    <h1 class = 'oe_text_center'>
                    	<b>Báo cáo công nợ theo tuổi nợ</b>
                    </h1>
                    
                    <group>
                    	<div class="oe_text_center">
	                    	<label for="account_code" class="oe_inline"/>
	                		<field name="account_code" class="oe_inline"/>
                		</div>
                    </group>
                    <group>
                		<div class="oe_text_center">
	                		<label for="account_name" class="oe_inline"/>
	                		<field name="account_name" nolabel="1" class="oe_inline"/>
                		</div>
                    </group>
                    <group>
                		<div class="oe_text_center">
	                		<label for="start_date" class="oe_inline"/>
	                		<field name="start_date" nolabel="1" class="oe_inline"/>
                		</div>
                    </group>
                    
                    <group >
	                	<field name="general_aged_partner_balance_review_line" nolabel='1'>
	                		<tree create="false" edit="false" delete="false">          
	                			<field name="seq"/>
	                			<field name="partner_code"/>
	                			<field name="partner_name"/>
	                			<field name="voucher_no"/>
	                			<field name="date_document"/>
	                			<field name="date_due" />
	                			<field name="description"/>
	                			<field name="origin_amount"/>
	                			<field name="residual_30"/>
	                			<field name="residual_90"/>
	                			<field name="residual_180"/>
	                			<field name="residual_else"/>
	                			<field name="aging_day"/>
	                		</tree>
	                	</field>
	                </group> 
			       </sheet>       	                	
                </form>
            </field>
        </record>
        <record id="greenerp_report_general_aged_partner_balance_review" model="greenerp.report">
            <field name="name">general_aged_partner_balance_review</field>
            <field name="delete_after">7</field>
        </record>        
 <!--  ========================= Create General Report Partner Ledger Review ================= -->     
         <record id="general_report_partner_ledger_review" model="ir.ui.view">
            <field name="name">general_report_partner_ledger_review</field>
            <field name="model">general.report.partner.ledger.review</field>
            <field name="arch" type="xml">
                <form string="Genener Report Partner Ledger Review" version="7.0">
                	<header>
                        <button string="Print (.xls)" type="object" name="print_xls" icon='gtk-execute'/>
                    </header>
                    <sheet>
                    <div class="oe_bold oe_text_left">
                    	<field name="nguoi_nop_thue_title" nolabel = '1' class="oe_text_left oe_inline"/> 
                    	<field name="nguoi_nop_thue" class="oe_text_left oe_inline"/> 
            		</div>
            		<div class="oe_bold oe_text_left">
                    	<field name="dia_chi_title" nolabel = '1' class="oe_text_left oe_inline"/> 
                    	<field name="dia_chi" class="oe_text_left oe_inline"/> 
            		</div>
            		<div class="oe_bold oe_text_left">
                    	<field name="ms_thue_title" nolabel = '1' class="oe_text_left oe_inline"/> 
                    	<field name="ms_thue" class="oe_text_left oe_inline"/> 
            		</div>
                    <div class="oe_text_center">
            				<h2><b><field name="name"/> </b></h2>

            		</div>
                    	<div class="oe_text_center">
	                    	<label for="sh_tk" class="oe_inline"/>
	                		<field name="sh_tk" class="oe_inline"/>
                		</div>
                		<div class="oe_text_center">
	                		<label for="ten_tk" class="oe_inline"/>
	                		<field name="ten_tk" nolabel="1" class="oe_inline"/>
                		</div>
                		<div class="oe_text_center">
	                		<label for="partner_title" class="oe_inline"/>
	                		<field name="partner_title" nolabel="1" class="oe_inline"/>
                		</div>
                		<div class="oe_text_center">
	                		<label for="start_date" class="oe_inline"/>
	                		<field name="start_date" nolabel="1" class="oe_inline"/>
	                		<label string=" - " class="oe_inline"/>
	                		<field name="end_date" nolabel="1" class="oe_inline"/>
                		</div>
                    <group>
		                	<field name="general_report_partner_ledger_review_line" nolabel='1'>
		                		<tree create="false" edit="false" delete="false">          
		                			<field name="gl_date"/>
		                			<field name="doc_date"/>
		                			<field name="doc_no" />
		                			<field name="description" />
		                			<field name="acc_code"  />
		                			<field name="amount_dr"  />
		                			<field name="amount_cr"  />
		                		</tree>
		                	</field>
	                	</group> 
			       </sheet>       	                	
                </form>
            </field>
        </record>
       <record id="green_general_report_partner_ledger_review" model="greenerp.report">
            <field name="name">general_report_partner_ledger_review</field>
            <field name="delete_after">7</field>
        </record>  
        
