<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
	
	<record id="group_project_hr" model="res.groups">
        <field name="name">Project executive</field>
        <field name="category_id" ref="base.module_category_project_management"/>
        <field name="implied_ids" eval="[(4, ref('project.group_project_manager'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>
    
    <record model="ir.rule" id="project_task_public_members_rule_useroverview">
        <field name="name">Project task: employees: public, employees or followers</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',
                                        ('project_id.privacy_visibility', 'in', ['public', 'employees']),
                                        ('project_id.message_follower_ids', 'in', [user.partner_id.id])
                                    ]</field>
    </record>
    
    <record model="ir.rule" id="project_task_public_members_rule">
        <field name="name">Project phase: employees: public, employees or followers</field>
        <field name="model_id" ref="project_long_term.model_project_phase"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',
                                        ('project_id.privacy_visibility', 'in', ['public', 'employees']),
                                        ('project_id.message_follower_ids', 'in', [user.partner_id.id])
                                    ]</field>
    </record>
    
    <record model="ir.rule" id="project.project_manager_all_project_tasks_rule">
        <field name="name">Project/Task: project manager: see all</field>
        <field name="model_id" ref="model_project_task"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(6,0,[ref('group_project_hr')])]"/>
    </record>
    
    <record model="ir.rule" id="project.project_project_manager_rule">
        <field name="name">Project: project manager: see all</field>
        <field name="model_id" ref="model_project_project"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(6,0,[ref('group_project_hr')])]"/>
    </record>
    
</data>
</openerp>
