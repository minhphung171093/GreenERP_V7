<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

	<record id="ttv_view_order_form" model="ir.ui.view">
            <field name="name">ttv.sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='pricelist_id']" position="after" >
                		<field name="product_ralate" invisible='1' />
	        	</xpath>
	        	<xpath expr="//field[@name='project_id']" position="replace" >
                		<field name="project_id" context="{'partner_id':partner_invoice_id, 'default_pricelist_id':pricelist_id, 'default_name':name, 'default_type': 'contract'}" groups="sale.group_analytic_accounting" 
                		domain="[('type','in',['view','normal','contract']),('partner_id','=',partner_id)]"/>
	        	</xpath>
	        </field>
	</record>                                  
	
	<record id="ttv_view_sales_order_filter" model="ir.ui.view">
            <field name="name">ttv.view.sales.order.filter</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='project_id']" position="after" >
                		<field name="product_ralate" />
						<field name="date_order" />
						<field name="nam_order" />
	        	</xpath>
	        </field>
	</record>      

	<record id="ttv_view_order_tree" model="ir.ui.view">
            <field name="name">ttv.sale.order.tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total']" position="after" >
                		<field name="product_ralate" invisible='1' />
	        	</xpath> 
	        </field>
	</record> 


    </data>
</openerp>
