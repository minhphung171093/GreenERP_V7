<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_split_hop_dong" model="ir.ui.view">
            <field name="name">split.hop.dong.form</field>
            <field name="model">split.hop.dong</field>
            <field name="arch" type="xml">
            <form string="Phân bổ hợp đồng" version="7.0">
            	<sheet>
	                <group>
	                    <field name="product_id" readonly="1"/>
	                    <label for="qty"/>
	                    <div>
	                        <field name="qty" readonly="1" class="oe_inline"/>
	                        <field name="product_uom" readonly="1" class="oe_inline"/>
	                    </div>
	                    <field name="location_id" invisible="1"/>
	                    <field name="move_id" invisible="1"/>
	                    <field name="location_choose_id" domain="[('usage','=','internal'),('chained_location_type','!=','customer')]" on_change="onchange_location_choose_id(location_choose_id,move_id,context)"/>
	                </group>
	                <group string="Phân bổ hợp đồng">
		                <field name="line_ids" required='0' nolabel='1' domain="[('location_id','=',location_choose_id)]">
		                    <tree string="Phân bổ hợp đồng" editable='top' create="false" delete="false">
		                    	<field name="is_choose"/>
		                    	<field name="location_id" readonly='1' domain="[('usage','=','internal')]"/>
		                        <field name="hd_mua_id" readonly='1' domain="[('type','=','hd_mua')]"/>
		                        <field name="picking_in_id" readonly='1' domain="[('type','=','in'),('purchase_id.hop_dong_id','=',hd_mua_id)]"/>
		                        <field name="quantity_ton" readonly='1'/>
		                        <field name="quantity" attrs="{'readonly':[('is_choose','=',False)]}" required='1' on_change="onchange_quantity(quantity_ton,quantity)"/>
		                    </tree>
		                </field>
		            </group>
	            </sheet>
                <footer>
                    <button name="split_lot" string="Cắt" type="object" class="oe_highlight"/>
                    hoặc
                    <button string="Hủy bỏ" class="oe_link" special="cancel"/>
                </footer>
            </form>
            </field>
        </record>

        <record id="action_split_hop_dong" model="ir.actions.act_window">
            <field name="name">Phân bổ hợp đồng</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">split.hop.dong</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{'form_view_ref': False}</field>
        </record>

    </data>
</openerp>
