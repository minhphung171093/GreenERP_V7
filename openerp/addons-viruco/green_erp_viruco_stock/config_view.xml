<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
	    <record id="lo_trinh_tree_view" model="ir.ui.view">
			<field name="name">lo.trinh.tree</field>
			<field name="model">lo.trinh</field>
			<field name="arch" type="xml">
				<tree string="Lộ trình">
					<field name="name"/>
					<field name="description"/>
				</tree>
			</field>
		</record>
		
		<record id="lo_trinh_filter_view" model="ir.ui.view">
			<field name="name">lo.trinh.filter</field>
			<field name="model">lo.trinh</field>
            <field name="arch" type="xml">
                <search string="Tìm lộ trình">
                    <field name="name"/>
               </search>
            </field>
        </record>
		
		<record id="lo_trinh_form_view" model="ir.ui.view">
			<field name="name">lo.trinh.form</field>
			<field name="model">lo.trinh</field>
            <field name="arch" type="xml">
	            <form string="Lộ trình" version="7.0">
	            	<sheet>
	            		<group>
		                	<field name="name"/>
							<field name="description"/>
						</group>
		         	</sheet>
		         </form>
			</field>
		</record>
          
		<record id="action_lo_trinh" model="ir.actions.act_window">
            <field name="name">Lộ trình</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">lo.trinh</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="lo_trinh_tree_view"/>
            <field name="domain">[]</field>
        </record>
	        
    	<menuitem id="menu_action_lo_trinh" action="action_lo_trinh" name="Lộ trình" parent="stock.menu_stock_configuration" sequence="0"/>
    	
    </data>
    
</openerp>
