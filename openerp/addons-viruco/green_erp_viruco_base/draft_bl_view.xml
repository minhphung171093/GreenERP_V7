<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        
        <record id="draft_bl_tree_view" model="ir.ui.view">
			<field name="name">draft.bl.tree</field>
			<field name="model">draft.bl</field>
			<field name="arch" type="xml">
				<tree string="Chứng từ xuất khẩu">
					<field name="name"/>
					<field name="hopdong_id"/>
					<field name="date"/>
					<field name="notify_party_id"/>
					<field name="bl_no"/>
					<field name="port_of_loading"/>
					<field name="port_of_charge"/>
	                <field name="diadiem_nhanhang" string = "Place of delivery"/>
	                <field name="state"/>
				</tree>
			</field>
		</record>
		
		<record id="view_draft_bl_filter" model="ir.ui.view">
            <field name="name">draft.bl.select</field>
            <field name="model">draft.bl</field>
            <field name="arch" type="xml">
                <search string="Search Chứng từ xuất khẩu">
                    <field name="name"/>
                    <field name="hopdong_id"/>
                    <field name="notify_party_id"/>
                    <field name="bl_no"/>
                    <group expand="0" string="Group By...">
                        <filter string="Contract" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'hopdong_id'}"/>
                        <filter string="Status" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'state'}"/>
                    </group>
               </search>
            </field>
        </record>
        
		<record id="draft_bl_form_view" model="ir.ui.view">
            <field name="name">draft.bl.form</field>
            <field name="model">draft.bl</field>
            <field name="arch" type="xml">
	            <form string="Chứng từ xuất khẩu" version="7.0">
					<header>
						<field name="state" widget="statusbar" statusbar_visible="moi_tao,da_duyet,hoan_tat,huy_bo"/>
						<button name="xac_nhan" string="Xác nhận" states="moi_tao" type="object" class="oe_highlight"/>
						<button name="hoan_tat" string="Hoàn tất" states="da_duyet" type="object" class="oe_highlight"/>
						<button name="huy_bo" string="Huỷ" states="moi_tao,da_duyet,hoan_tat" type="object" class="oe_highlight"/>
						<!--<button name="print_draft_bl" string="Print Chứng từ xuất khẩu" type="object" class="oe_highlight"/>
						<button name="bt_wizard" string="In" type="object" class="oe_highlight"/>-->
					</header>
	            	<sheet>
	            	<group >
	                    <group>
	                    	<field name="hopdong_id" domain="[('type','=','hd_ngoai'),('state','not in',('moi_tao','da_duyet','da_ky','het_han'))]" on_change = "onchange_hopdong_id(hopdong_id)" context="{'form_view_ref':'green_erp_viruco_base.hop_dong_ngoai_form_view'}"/>
	                        <field name="date"/>
	                        <field name="bl_no"/>
	                    </group>
	                    <group>
	                    	<field name="name" string="Booking No."/>
                    		<field name="shipping_line_id" />
                    		<field name="forwarder_line_id" />	      
                    	</group>              	
	                    <group>
                    		<field name="company_id" string = "Shipper"/>
                    		<field name="consignee_id" string = "1st Consignee" />
                    		<field name="consignee_text" string = "2nd Consignee" />
                    		<field name="notify_party_id" domain="[('customer','=',True)]" string = "1st Notify Party" />
                    		<field name="consignee_text" string = "2nd Notify Party" />
	                    </group>
	                    <group>
                    		<field name="mean_transport"/>
                    		<field name="port_of_loading"/>
                    		<field name="port_of_charge"/>
                    		<field name="diadiem_nhanhang" string = "Place of delivery"/>
                    		<field name="country_id"/>
                    		<field name="freight"/>
                    		<field name="customs_declaration" string = "Customs Declaration Number" />
                    		<field name="stock_ids" widget="many2many_tags" invisible='1'/>
	                    </group>
	                    </group>
	                    <group>
	                    	<field name="note"/>
						</group>
						<notebook>
							<page string="Chứng từ xuất khẩu Line" >
								<field name="draft_bl_line" context="{'default_hopdong_id':hopdong_id}">
									<tree>
	                                    <field name="ocean_vessel" />
	                                    <field name="etd_date"/>
	                                    <field name="eta_date"/>
	                                    <field name="cuoc_tau"/>
	                                   	<field name="hopdong_id" invisible="1"/>
									</tree>
									<form version = "7.0">
										<group col='4' colspan='2'>
					                    	<field name="ocean_vessel" />
					                    	<field name="hopdong_line_id" domain="[('hopdong_id','=',parent.hopdong_id)]" attrs="{'invisible':[('option','in',['seal_no',False])]}"/>
					                    	<field name="container_no_seal" on_change = "onchange_container_no(container_no_seal)"  attrs="{'invisible':[('option','in',['product',False])]}"/>
					                    	<!--<field name="picking_id" context="{'search_picking_out':1, 'hopdong_id':parent.hopdong_id}"/>-->
		                                    <field name="etd_date"/>
		                                    <field name="eta_date"/>
		                                    <field name="cuoc_tau"/>
		                                    <field name="option" on_change = "onchange_option(option,line_number)"/>
		                                    <field name="line_number" on_change = "onchange_option(option,line_number)" attrs="{'invisible':[('option','!=','product')]}"/>
		                                    <field name="hopdong_id" invisible="1"/>
					                    </group>
					                    <notebook>
											<page string="Description of Goods" attrs="{'invisible':[('option','in',['seal_no',False])]}">
												<field name="seal_descript_line">
													<tree editable = 'bottom'>
					                                    <field name="container_no_seal" on_change = "onchange_container(container_no_seal)" />
					                                    <field name="packages_qty" string = 'Number of Packages'/>
					                                    <field name="packages_id" string = 'Kind of Packages' />
					                                    <field name="packages_weight" string = 'Package Weight (Kgs)' />
					                                    <field name="net_weight"/>
					                                    <field name="product_uom"/>
					                                    <field name="gross_weight"/>
													</tree>
												</field>
											</page>
											<page string="Description of Seal" attrs="{'invisible':[('option','in',['product',False])]}">
												<field name="description_line">
													<tree editable = 'bottom'>
					                                    <field name="hopdong_line_id" domain="[('hopdong_id','=',parent.hopdong_id)]"/>
					                                    <field name="packages_qty"/>
					                                    <field name="packages_id"/>
					                                    <field name="packages_weight"/>
					                                    <field name="net_weight"/>
					                                    <field name="gross_weight"/>
													</tree>
												</field>
											</page>
										</notebook>
									</form>
								</field>
							</page>
						</notebook>
		         	</sheet>
		         </form>
			</field>
		</record>
		
        
        <record id="action_draft_bl" model="ir.actions.act_window">
            <field name="name">Chứng từ xuất khẩu</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">draft.bl</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="draft_bl_tree_view"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
    	
    </data>
</openerp>
