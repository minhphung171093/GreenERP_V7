<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        
        <record id="draft_bl_tree_view" model="ir.ui.view">
			<field name="name">draft.bl.tree</field>
			<field name="model">draft.bl</field>
			<field name="arch" type="xml">
				<tree string="Draft BL">
					<field name="name"/>
					<field name="hopdong_id"/>
					<field name="date"/>
					<field name="notify_party_id"/>
					<field name="bl_no"/>
					<field name="port_of_loading"/>
					<field name="port_of_charge"/>
	                <field name="diadiem_nhanhang" string = "Place of delivery"/>
				</tree>
			</field>
		</record>
		
		<record id="view_draft_bl_filter" model="ir.ui.view">
            <field name="name">draft.bl.select</field>
            <field name="model">draft.bl</field>
            <field name="arch" type="xml">
                <search string="Search Draft BL">
                    <field name="name"/>
                    <field name="hopdong_id"/>
                    <field name="notify_party_id"/>
                    <field name="bl_no"/>
                    <group expand="0" string="Group By...">
                        <filter string="Contract" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'hopdong_id'}"/>
                    </group>
               </search>
            </field>
        </record>
        
		<record id="draft_bl_form_view" model="ir.ui.view">
            <field name="name">draft.bl.form</field>
            <field name="model">draft.bl</field>
            <field name="arch" type="xml">
	            <form string="Draft BL" version="7.0">
					<header>
						<!--<button name="print_draft_bl" string="Print Draft BL" type="object" class="oe_highlight"/>-->
						<button name="bt_wizard" string="In" type="object" class="oe_highlight"/>
					</header>
	            	<sheet>
	                    <h1>
	                    	<label string="Booking No."/>
	                        <field name="name" class="oe_inline" nolabel="1" />
	                    </h1>
	                    <group>
	                    	<group>
	                    		<field name="hopdong_id" domain="[('type','=','hd_ngoai'),('state',not in,('moi_tao','da_duyet','da_ky','het_han'))]" on_change="onchange_hopdong_id(hopdong_id)"/>
	                    		<field name="company_id"/>
	                    		<field name="consignee_id"/>
	                    		<field name="freight"/>
	                    		<field name="port_of_loading"/>
	                    		<field name="diadiem_nhanhang" string = "Place of delivery"/>
	                    		<field name="country_id"/>
	                    		<field name="shipping_line_id" />
	                    		<field name="forwarder_line_id" />
	                    	</group>
	                    	<group>
	                    		<field name="date"/>
	                    		<field name="notify_party_id" domain="[('customer','=',True)]"/>
	                    		<field name="consignee_text"/>
	                    		<field name="mean_transport"/>
	                    		<field name="bl_no"/>
	                    		<field name="port_of_charge"/>
	                    		<field name="quantity_kind_of_packages"/>
	                    		<field name="meansurement" />
	                    		<field name="customs_declaration" />
	                    		
	                    	</group>
	                    </group>
	                    <group>
	                    	<field name="note"/>
						</group>
						<notebook>
							<page string="Draft BL Line" >
								<field name="draft_bl_line">
									<tree>
	                                    <field name="ocean_vessel" />
	                                    <field name="hopdong_line_id"/>
	                                    <field name="picking_id"/>
	                                    <field name="etd_date"/>
	                                    <field name="eta_date"/>
	                                    <field name="cuoc_tau"/>
									</tree>
									<form version = "7.0">
										<group col='4' colspan='2'>
					                    	<field name="ocean_vessel" />
					                    	<field name="hopdong_line_id" domain="[('hopdong_id','=',parent.hopdong_id)]"/>
					                    	<field name="picking_id" context="{'search_picking_out':1, 'hopdong_id':parent.hopdong_id}"/>
		                                    <field name="etd_date"/>
		                                    <field name="eta_date"/>
		                                    <field name="cuoc_tau"/>
					                    </group>
					                    <notebook>
											<page string="Description of Goods" >
												<field name="description_line">
													<tree editable = 'bottom'>
					                                    <field name="container_no_seal" />
					                                    <field name="packages_qty"/>
					                                    <field name="packages_id"/>
					                                    <field name="packages_weight"/>
					                                    <field name="net_weight"/>
					                                    <field name="gross_weight"/>
													</tree>
												</field>
											</page>
										</notebook>
									</form>
								</field>
							</page>
						</notebook>
		         	</sheet>
		         </form>
			</field>
		</record>
		
        
        <record id="action_draft_bl" model="ir.actions.act_window">
            <field name="name">Draft BL</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">draft.bl</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="draft_bl_tree_view"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
    	
    </data>
</openerp>
