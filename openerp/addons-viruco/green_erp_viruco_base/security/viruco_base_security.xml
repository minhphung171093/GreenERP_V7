<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data noupdate="0">
	
		<record model="ir.module.category" id="cate_viruco_admin">
	        <field name="name">Viruco</field>
	        <field name="sequence">0</field>
	    </record>
		
	    <record id="group_viruco_admin" model="res.groups">
	        <field name="name">Admin</field>
	        <field name="category_id" ref="cate_viruco_admin"/>
	        <field name="users" eval="[(4, ref('base.user_root'))]"/>
	    </record>

	    <record id="group_viruco_thumua" model="res.groups">
	        <field name="name">Mua trong nước</field>
	        <field name="category_id" ref="cate_viruco_admin"/>
	        <field name="users" eval="[(4, ref('base.user_root'))]"/>
	        <field name="implied_ids" eval="[(4, ref('group_viruco_admin'))]"/>
	    </record>

	    <record id="group_viruco_mua_nhapkhau" model="res.groups">
	        <field name="name">Mua nhập khẩu</field>
	        <field name="category_id" ref="cate_viruco_admin"/>
	        <field name="users" eval="[(4, ref('base.user_root'))]"/>
	        <field name="implied_ids" eval="[(4, ref('group_viruco_admin'))]"/>
	    </record>

	    <record id="group_viruco_kinhdoanh" model="res.groups">
	        <field name="name">Kinh doanh</field>
	        <field name="category_id" ref="cate_viruco_admin"/>
	        <field name="users" eval="[(4, ref('base.user_root'))]"/>
	        <field name="implied_ids" eval="[(4, ref('group_viruco_admin'))]"/>
	    </record>	
	</data>
	
	<data noupdate="1">
	
	    <record id="khach_hang_rule" model="ir.rule">
	        <field name="name">Khach Hang</field>
	        <field model="ir.model" ref="base.model_res_partner" name="model_id"/>
	        <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
	        <field name="groups" eval="[(4, ref('base.group_sale_salesman'))]"/>
	    </record>
	    <record id="khach_hang_see_all" model="ir.rule">
	        <field name="name">All Khach Hang</field>
	        <field model="ir.model" ref="base.model_res_partner" name="model_id"/>
	        <field name="domain_force">[(1,'=',1)]</field>
	        <field name="groups" eval="[(4, ref('base.group_sale_salesman_all_leads'))]"/>
	    </record>
	    
	    <record id="don_ban_hang_rule" model="ir.rule">
	        <field name="name">Don Ban Hang</field>
	        <field ref="model_don_ban_hang" name="model_id"/>
	        <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False)]</field>
	        <field name="groups" eval="[(4, ref('base.group_sale_salesman'))]"/>
	    </record>
	    <record id="don_ban_hang_see_all" model="ir.rule">
	        <field name="name">All Don Ban Hang</field>
	        <field ref="model_don_ban_hang" name="model_id"/>
	        <field name="domain_force">[(1,'=',1)]</field>
	        <field name="groups" eval="[(4, ref('base.group_sale_salesman_all_leads'))]"/>
	    </record>
	    
	    <record id="hop_dong_ban_rule" model="ir.rule">
	        <field name="name">Hop Dong Ban</field>
	        <field ref="model_hop_dong" name="model_id"/>
	        <field name="domain_force">['|',('user_id','=',user.id),('user_id','=',False),('type','in',('hd_noi','hd_ngoai'))]</field>
	        <field name="groups" eval="[(4, ref('base.group_sale_salesman'))]"/>
	    </record>
	    <record id="hop_dong_ban_see_all" model="ir.rule">
	        <field name="name">Hop Dong Ban</field>
	        <field ref="model_hop_dong" name="model_id"/>
	        <field name="domain_force">[(1,'=',1)]</field>
	        <field name="groups" eval="[(4, ref('base.group_sale_salesman_all_leads'))]"/>
	    </record>
	    
	    <record id="draft_bl_rule" model="ir.rule">
	        <field name="name">Draft BL</field>
	        <field ref="model_draft_bl" name="model_id"/>
	        <field name="domain_force">[('hopdong_id.user_id','=',user.id)]</field>
	        <field name="groups" eval="[(4, ref('base.group_sale_salesman'))]"/>
	    </record>
	    <record id="draft_bl_see_all" model="ir.rule">
	        <field name="name">Draft BL</field>
	        <field ref="model_draft_bl" name="model_id"/>
	        <field name="domain_force">[(1,'=',1)]</field>
	        <field name="groups" eval="[(4, ref('base.group_sale_salesman_all_leads'))]"/>
	    </record>
	    
	    <record id="phuluc_hd_ban_rule" model="ir.rule">
	        <field name="name">Phu Luc HD Ban</field>
	        <field ref="model_phuluc_hop_dong" name="model_id"/>
	        <field name="domain_force">[('hop_dong_id.user_id','=',user.id),('type','in',('hd_noi','hd_ngoai'))]</field>
	        <field name="groups" eval="[(4, ref('base.group_sale_salesman'))]"/>
	    </record>
	    <record id="phuluc_hd_ban_see_all" model="ir.rule">
	        <field name="name">Phu Luc HD Ban</field>
	        <field ref="model_phuluc_hop_dong" name="model_id"/>
	        <field name="domain_force">[(1,'=',1)]</field>
	        <field name="groups" eval="[(4, ref('base.group_sale_salesman_all_leads'))]"/>
	    </record>
	</data>
</openerp>
