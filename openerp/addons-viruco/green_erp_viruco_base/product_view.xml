<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		
		<record id="product_normal_form_view_inherit" model="ir.ui.view">
            <field name="name">product.normal.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
            	<label for="warranty" position="before">
                    <field name="shop_ids" widget="many2many_tags"/>
            	</label>
            	<xpath expr="//page[@string='Inventory']" position="attributes">
          			<attribute name="invisible">1</attribute>
            	</xpath>
            	<xpath expr="//page[@string='Sales']" position="attributes">
          			<attribute name="invisible">1</attribute>
            	</xpath>
            	<xpath expr="//label[@for='ean13']" position="attributes">
          			<attribute name="invisible">1</attribute>
            	</xpath>
            	<xpath expr="//div[@name='ean']" position="attributes">
          			<attribute name="invisible">1</attribute>
            	</xpath>
            	<xpath expr="//group[@name='procurement_uom']" position="attributes">
          			<attribute name="invisible">1</attribute>
            	</xpath>
            	<xpath expr="//separator[@string='Description for Suppliers']" position="attributes">
          			<attribute name="invisible">1</attribute>
            	</xpath>
            	<xpath expr="//field[@name='description_purchase']" position="attributes">
          			<attribute name="invisible">1</attribute>
            	</xpath>
            </field>
        </record>
        
        <record id="product_normal_form_view_account_inherit" model="ir.ui.view">
            <field name="name">product.normal.account.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="account.product_normal_form_view"/>
            <field name="arch" type="xml">
            	<xpath expr="//page[@string='Accounting']" position="attributes">
          			<attribute name="invisible">1</attribute>
            	</xpath>
            	<xpath expr="//field[@name='property_account_income']" position="after">
          			<field name="account_deducted_id" domain="[('type','=','other')]" groups="account.group_account_user"/>
            	</xpath>
            </field>
        </record>
        
        <record id="view_normal_procurement_locations_form_inherit" model="ir.ui.view">
            <field name="name">product.normal.stock.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.view_normal_procurement_locations_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//group[@name='delay']" position="attributes">
          			<attribute name="invisible">1</attribute>
            	</xpath>
            </field>
        </record>
        
        <record id="view_product_supplier_inherit_inherit" model="ir.ui.view">
            <field name="name">product.normal.supplier.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="purchase.view_product_supplier_inherit"/>
            <field name="arch" type="xml">
            	<xpath expr="//separator[@string='Suppliers']" position="attributes">
          			<attribute name="invisible">1</attribute>
            	</xpath>
            	<xpath expr="//field[@name='seller_ids']" position="attributes">
          			<attribute name="invisible">1</attribute>
            	</xpath>
            </field>
        </record>
        
        <record id="view_category_property_form_account_modify" model="ir.ui.view">
            <field name="name">product.category.property.form.inherit.account</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="account.view_category_property_form"/>
            <field name="arch" type="xml">
            	<field name="property_account_expense_categ" position="after">
                    <field name="account_deducted_id" domain="[('type','=','other')]" groups="account.group_account_user"/>
            	</field>
            </field>
        </record>
        
		        
    </data>
</openerp>
