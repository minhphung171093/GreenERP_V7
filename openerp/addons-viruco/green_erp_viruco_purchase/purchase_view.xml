<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    	<record id="view_purchase_order_filter_inherit" model="ir.ui.view">
            <field name="name">purchase.order.list.select.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
            <field name="arch" type="xml">
            	<field name="create_uid" position="after">
            		<field name="hop_dong_id"/>
            	</field>
            	<filter string='Order Date' position="after">
            		<filter string="Hợp đồng" icon="terp-go-month" domain="[]" context="{'group_by':'hop_dong_id'}"/>
            	</filter>
            </field>
        </record>
        
        <record id="purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
            	<field name="partner_ref" position="after">
            		<field name="hop_dong_id" domain="[('type','=','hd_mua')]"/>
            	</field>
            	<field name="dest_address_id" position="after">
            		<field name="user_id"/>
            	</field>
            	<xpath expr="//page[@string='Purchase Order']/field[@name='order_line']/tree/field[@name='product_id']" position="after">
          			<field name="chatluong_id"/>
            		<field name="quycach_donggoi_id"/>
            	</xpath>
            </field>
        </record>
        
    </data>
</openerp>
