<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<record id="view_sales_order_filter_inherit" model="ir.ui.view">
            <field name="name">sale.order.list.select.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
            	<field name="user_id" position="after">
            		<field name="nguoi_gioithieu_id"/>
            		<field name="hop_dong_id"/>
            	</field>
            	<filter string='Order Date' position="after">
            		<filter string="Người giới thiệu" icon="terp-go-month" domain="[]" context="{'group_by':'nguoi_gioithieu_id'}"/>
            		<filter string="Hợp đồng" icon="terp-go-month" domain="[]" context="{'group_by':'hop_dong_id'}"/>
            	</filter>
            </field>
        </record>
        
        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
            	<field name="date_order" position="after">
            		<field name="thoigian_giaohang"/>
            	</field>
            	<field name="client_order_ref" position="after">
            		<field name="nguoi_gioithieu_id"/>
            	</field>
            	<field name="project_id" position="after">
            		<field name="dieukien_giaohang_id"/>
            		<field name="hop_dong_id" on_change="onchange_hop_dong_id(hop_dong_id)" domain="[('type','in',['hd_noi','hd_ngoai']),('partner_id','=',partner_id),('state','=','da_duyet')]"/>
            	</field>
            	<field name="origin" position="after">
        			<div class="oe_edit_only">
                        <label for="thanhtoan" style="width: 50%%"/>
	            		<field name="thanhtoan"  style="width: 15%%"/>
	            		<field name="ngay_thanhtoan"  style="width: 35%%"/>
	            	</div>
	            	<br/>
	            	<div class="oe_edit_only">
                        <label for="dagui_nganhang" style="width: 70%%"/>
	            		<field name="dagui_nganhang"  style="width: 15%%"/>
	            		<field name="ngaygui_nganhang"  style="width: 15%%"/>
	            	</div>
	            	<br/>
	            	<div class="oe_edit_only">
                        <label for="dagui_hopdong" style="width: 60%%"/>
	            		<field name="dagui_hopdong"  style="width: 15%%"/>
	            		<field name="ngaygui_hopdong"  style="width: 15%%"/>
	            	</div>
	            	<br/>
	            	<div class="oe_edit_only">
                        <label for="dagui_hoadon" style="width: 60%%"/>
	            		<field name="dagui_hoadon"  style="width: 15%%"/>
	            		<field name="ngaygui_hoadon"  style="width: 25%%"/>
	            	</div>
	            	<br/>
	            	<div class="oe_edit_only">
                        <label for="dagui_chungtugoc" style="width: 70%%"/>
	            		<field name="dagui_chungtugoc"  style="width: 15%%"/>
	            		<field name="ngaygui_chungtugoc"  style="width: 15%%"/>
	            	</div>
            	</field>
            	<xpath expr="//form/sheet/notebook/page[@string='Order Lines']/field[@name='order_line']/form/group/group/field[@name='product_id']" position="after">
          			<field name="chatluong_id"/>
            		<field name="quycach_donggoi_id"/>
            	</xpath>
            	<xpath expr="//form/sheet/notebook/page[@string='Order Lines']/field[@name='order_line']/tree/field[@name='product_id']" position="after">
          			<field name="chatluong_id"/>
            		<field name="quycach_donggoi_id"/>
            	</xpath>
            </field>
        </record>
        
        <record id="view_order_form_inherit_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.sale.stock.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit"/>
            <field name="arch" type="xml">
            	<field name="incoterm" position="replace">
            		<field name="hinhthuc_giaohang_id"/>
            	</field>
            	<field name="order_policy" position="after">
            		<field name="so_chuyenphatnhanh"/>
            	</field>
            </field>
        </record>
        
    </data>
</openerp>
