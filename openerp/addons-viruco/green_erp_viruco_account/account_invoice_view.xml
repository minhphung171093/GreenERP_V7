<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    	<record id="invoice_supplier_form_inherit" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
            	<field name="journal_id" position="after">
            		<field name="hop_dong_id" readonly='1'/>
            	</field>
            	<xpath expr="//field[@name='date_invoice']" position="before">
	        		<field name="shop_id" required="1"/>
	        	</xpath>
            	<xpath expr="//field[@name='date_invoice']" position="after">
	        		<field name="date_document"/>
	        	</xpath>
	        	<xpath expr="//field[@name='supplier_invoice_number']" position="after">
	        		<field name="reference" string="Ký hiệu hóa đơn"/>
	        	</xpath>
            </field>
        </record>
        
        <record id="invoice_form_inherit" model="ir.ui.view">
            <field name="name">account.invoice.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='date_invoice']" position="before">
	        		<field name="shop_id" required="1"/>
	        	</xpath>
            	<field name="journal_id" position="after">
            		<field name="hop_dong_id" readonly='1'/>
            	</field>
            	<xpath expr="//field[@name='fiscal_position']" position="after">
	        		<field name="reference_number" invisible="0"/>
	        		<field name="reference" string="Ký hiệu hóa đơn"/>
	        	</xpath>
	        	<xpath expr="//page[@string='Payments']" position="after">
	        		<page string="Supplier Invoice" groups="base.group_user">
                        <field name="sup_inv_ids">
                        </field>
                    </page>
	        	</xpath>
            </field>
        </record>
    	
    	<record id="view_account_invoice_filter_inherit" model="ir.ui.view">
            <field name="name">account.invoice.filter.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
            	<field name="period_id" position="after">
            		<field name="hop_dong_id"/>
            	</field>
            	<field name="partner_id" position="after">
                	<field name="reference_number"/>
                </field>
            	<filter string="Due Date" position="after">
            		<filter string="Hợp đồng" icon="terp-go-month" domain="[]" context="{'group_by':'hop_dong_id'}"/>
            	</filter>
            </field>
        </record>
    	
    	<!--Hung bo nut thanh toan tren HD-->
    	<record id="view_invoice_customer_inherit" model="ir.ui.view">
            <field name="name">account.invoice.customer.pay.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_voucher.view_invoice_customer"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='invoice_pay_customer']" position="replace">
                    <button name="invoice_pay_customer" type="object" string="Register Payment" invisible="1"/>
                </xpath>
            </field>
        </record>
        <record id="view_invoice_supplier_inherit" model="ir.ui.view">
            <field name="name">account.invoice.supplier.pay.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_voucher.view_invoice_supplier"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='invoice_pay_customer']" position="replace">
                    <button name="invoice_pay_customer" type="object" string="Pay" invisible="1"/>
                </xpath>
            </field>
        </record>
        
        <record id="group_invoice_form_view" model="ir.ui.view">
            <field name="name">group.invoice.form</field>
            <field name="model">group.invoice</field>
            <field name="arch" type="xml">
	            <form string="Gộp hóa đơn" version="7.0">
			        <h1>
			        	<field name="name" nolabel='1' readonly='1'/>
			        </h1>
					<footer>
				        <button name="bt_gop" string="Gộp" type="object" class="oe_highlight"/>
			            hoặc
			            <button string="Hủy bỏ" class="oe_link" special="cancel"/>
		            </footer>
	         	</form>
			</field>
		</record>
        
        <record id="action_group_invoice" model="ir.actions.act_window">
            <field name="name">Gộp hóa đơn</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">group.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="context">{'default_name':'Bạn thật sự muốn gộp hóa đơn?'}</field>
            <field name="view_id" ref="group_invoice_form_view"/>
            <field name="target">new</field>
        </record>
        
        <record model="ir.values" id="gop_hoa_don">
            <field name="model_id" ref="model_group_invoice" />
            <field name="name">Gộp hóa đơn</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_group_invoice'))" />
            <field name="key">action</field>
            <field name="model">account.invoice</field>
        </record>
        
        <!-- Modify Account Journal -->
        <record id="view_account_journal_form_general_modify" model="ir.ui.view">
            <field name="name">view.account.journal.form.general.modify</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                	<field name="shop_ids" widget="many2many_tags"/>
                </xpath>
            </field>
        </record>
        
        <!-- Modify Account move line -->
		<record id="view_move_line_tree_inherit" model="ir.ui.view">
            <field name="name">account.move.line.tree.general.modify</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="shop_id"/>
                </xpath>
            </field>
        </record>

    	<record id="view_account_move_line_filter_general_modify" model="ir.ui.view">
            <field name="name">account.move.line.filter.general.modify</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_account_move_line_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="shop_id"/>
                </xpath>
                <xpath expr="//filter[@string='Partner']" position="before">
                	<filter string="Shop" icon="terp-accessories-archiver" domain="[]" context="{'group_by':'shop_id'}"/>
                </xpath>
            </field>
        </record>
        
<!-- Modify Account Move -->
        <record id="view_account_move_filter_general_modify" model="ir.ui.view">
            <field name="name">account.move.filter.general.modify</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_move_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after">
                    <field name="shop_id"/>
                    <field name="date_document"/>
                </xpath>
                <xpath expr="//filter[@string='Date']" position="after">
                	<filter string="Document Date" icon="terp-accessories-archiver" domain="[]" context="{'group_by':'date_document'}"/>
                </xpath>
            </field>
        </record>
        
        <record id="view_account_move_tree_general_modify" model="ir.ui.view">
            <field name="name">account.move.tree.general.modify</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='name']" position="before">
                    <field name="shop_id"/>
                </xpath>
                <xpath expr="//field[@name='date']" position="after">
                    <field name="date_document"/>
                </xpath>
            </field>
        </record>
        
        <record id="view_account_move_form_general_modify" model="ir.ui.view">
            <field name="name">account.move.form.general.modify</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='journal_id']" position="before">
                    <field name="shop_id" required='1'/>
                </xpath>
                <xpath expr="//field[@name='date']" position="after">
                    <field name="date_document"/>
                </xpath>
                <xpath expr="//field[@name='line_id']/tree/field[@name='analytic_account_id']" position="after">
                    <field name="type_lctt" required='1'/>
                </xpath>
            </field>
        </record>
        
    </data>
</openerp>
