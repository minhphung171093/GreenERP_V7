<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    	<record id="invoice_supplier_form_inherit" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
            	<field name="journal_id" position="after">
            		<field name="hop_dong_id" readonly='1'/>
            	</field>
            </field>
        </record>
        
        <record id="invoice_form_inherit" model="ir.ui.view">
            <field name="name">account.invoice.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
            	<field name="journal_id" position="after">
            		<field name="hop_dong_id" readonly='1'/>
            	</field>
            </field>
        </record>
    	
    	<record id="view_account_invoice_filter_inherit" model="ir.ui.view">
            <field name="name">account.invoice.filter.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
            	<field name="period_id" position="after">
            		<field name="hop_dong_id"/>
            	</field>
            	
            	<filter string="Due Date" position="after">
            		<filter string="Hợp đồng" icon="terp-go-month" domain="[]" context="{'group_by':'hop_dong_id'}"/>
            	</filter>
            </field>
        </record>
    	
    	<!--Hung bo nut thanh toan tren HD-->
    	<record id="view_invoice_customer_inherit" model="ir.ui.view">
            <field name="name">account.invoice.customer.pay.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_voucher.view_invoice_customer"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='invoice_pay_customer']" position="replace">
                    <button name="invoice_pay_customer" type="object" string="Register Payment" invisible="1"/>
                </xpath>
            </field>
        </record>
        <record id="view_invoice_supplier_inherit" model="ir.ui.view">
            <field name="name">account.invoice.supplier.pay.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_voucher.view_invoice_supplier"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='invoice_pay_customer']" position="replace">
                    <button name="invoice_pay_customer" type="object" string="Pay" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
