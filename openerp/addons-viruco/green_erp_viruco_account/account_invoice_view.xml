<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    	<record id="invoice_supplier_form_inherit" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
            	<field name="journal_id" position="after">
            		<field name="hop_dong_id" readonly='1'/>
            	</field>
            </field>
        </record>
        
        <record id="invoice_form_inherit" model="ir.ui.view">
            <field name="name">account.invoice.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
            	<field name="journal_id" position="after">
            		<field name="hop_dong_id" readonly='1'/>
            	</field>
            </field>
        </record>
    	
    	<record id="view_account_invoice_filter_inherit" model="ir.ui.view">
            <field name="name">account.invoice.filter.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
            	<field name="period_id" position="after">
            		<field name="hop_dong_id"/>
            	</field>
            	
            	<filter string="Due Date" position="after">
            		<filter string="Hợp đồng" icon="terp-go-month" domain="[]" context="{'group_by':'hop_dong_id'}"/>
            	</filter>
            </field>
        </record>
    	
    	<!--Hung bo nut thanh toan tren HD-->
    	<record id="view_invoice_customer_inherit" model="ir.ui.view">
            <field name="name">account.invoice.customer.pay.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_voucher.view_invoice_customer"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='invoice_pay_customer']" position="replace">
                    <button name="invoice_pay_customer" type="object" string="Register Payment" invisible="1"/>
                </xpath>
            </field>
        </record>
        <record id="view_invoice_supplier_inherit" model="ir.ui.view">
            <field name="name">account.invoice.supplier.pay.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_voucher.view_invoice_supplier"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='invoice_pay_customer']" position="replace">
                    <button name="invoice_pay_customer" type="object" string="Pay" invisible="1"/>
                </xpath>
            </field>
        </record>
        
        <record id="group_invoice_form_view" model="ir.ui.view">
            <field name="name">group.invoice.form</field>
            <field name="model">group.invoice</field>
            <field name="arch" type="xml">
	            <form string="Gộp hóa đơn" version="7.0">
			        <h1>
			        	<field name="name" nolabel='1' readonly='1'/>
			        </h1>
					<footer>
				        <button name="bt_gop" string="Gộp" type="object" class="oe_highlight"/>
			            hoặc
			            <button string="Hủy bỏ" class="oe_link" special="cancel"/>
		            </footer>
	         	</form>
			</field>
		</record>
        
        <record id="action_group_invoice" model="ir.actions.act_window">
            <field name="name">Gộp hóa đơn</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">group.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="context">{'default_name':'Bạn thật sự muốn gộp hóa đơn?'}</field>
            <field name="view_id" ref="group_invoice_form_view"/>
            <field name="target">new</field>
        </record>
        
        <record model="ir.values" id="gop_hoa_don">
            <field name="model_id" ref="model_group_invoice" />
            <field name="name">Gộp hóa đơn</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_group_invoice'))" />
            <field name="key">action</field>
            <field name="model">account.invoice</field>
        </record>
        
    </data>
</openerp>
