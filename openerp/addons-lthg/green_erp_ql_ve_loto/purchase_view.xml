<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="loto_view_purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
            	<data>
                	<xpath expr="//page[@string='Incoming Shipments &amp; Invoices']" position="attributes">
                		<attribute name='invisible'>1</attribute>
                    </xpath>
                    <xpath expr="//field[@name='partner_ref']" position="attributes">
                		<attribute name='invisible'>1</attribute>
                    </xpath>
                    <xpath expr="//page[@string='Purchase Order']/field/tree/field[@name='date_planned']" position="attributes">
                		<attribute name='invisible'>1</attribute>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</openerp>
