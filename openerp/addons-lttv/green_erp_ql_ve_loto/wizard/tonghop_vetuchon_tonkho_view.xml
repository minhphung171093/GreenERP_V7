<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record id="view_tonghop_vetuchon_tonkho_report" model="ir.ui.view">
            <field name="name">tonghop.vetuchon.tonkho.report</field>
            <field name="model">tonghop.vetuchon.tonkho</field>
            <field name="arch" type="xml">
                <form string="Tổng hợp vé tự chọn tồn kho" version="7.0">
                    <group col='4' colspan='2'>
                    	<field name='date_from'/>
                    	<field name='date_to'/>
                    	<field name='ky_ve_id' required='1'/>
                    	<field name='date' invisible="1"/>
                    </group>
                    <group string="Mệnh giá">
                    	<field name='menh_gia_ids' nolabel='1'>
                    		<tree>
                    			<field name='name'/>
                    		</tree>
                    	</field>
                	</group>
                    <footer>
                        <button name="print_report" string="In" type="object" class="oe_highlight" context="{'type':'appointments'}"/>
                        hoặc
                        <button string="Hủy bỏ" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="action_tonghop_vetuchon_tonkho_report" model="ir.actions.act_window">
            <field name="name">Vé tự chọn tồn kho</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tonghop.vetuchon.tonkho</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
        <menuitem id="menu_action_tonghop_vetuchon_tonkho_report" action="action_tonghop_vetuchon_tonkho_report" parent="menu_baocao" sequence="70" groups="group_ql_ve_loto_man"/>
        
    </data>
</openerp>

