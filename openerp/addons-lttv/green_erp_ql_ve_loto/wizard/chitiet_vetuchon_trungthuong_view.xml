<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record id="view_chitiet_vetuchon_trungthuong_report" model="ir.ui.view">
            <field name="name">chitiet.vetuchon.trungthuong.report</field>
            <field name="model">chitiet.vetuchon.trungthuong</field>
            <field name="arch" type="xml">
                <form string="Vé tự chọn trúng thưởng" version="7.0">
                    <group colspan='4'>
                    	<field name='date'/>
                    </group>
                    <group>
	                    <group string="Đại lý">
	                    	<field name='dai_ly_ids' nolabel='1'/>
	                    </group>
	                    <group string="Mệnh giá">
	                    	<field name='menh_gia_ids' nolabel='1'>
	                    		<tree>
	                    			<field name='name'/>
	                    		</tree>
	                    	</field>
                    	</group>
                    </group>
                    <footer>
                        <button name="print_report" string="In" type="object" class="oe_highlight" context="{'type':'appointments'}"/>
                        hoặc
                        <button string="Hủy bỏ" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="action_chitiet_vetuchon_trungthuong_report" model="ir.actions.act_window">
            <field name="name">Vé tự chọn trúng thưởng</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">chitiet.vetuchon.trungthuong</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
        <menuitem name="Báo cáo" id="menu_baocao" parent="ql_ve_loto" sequence="20" groups="group_pp_ve_loto,group_ql_ve_loto_man"/>
        <menuitem name="Vé trúng thưởng" id="menu_action_chitiet_vetuchon_trungthuong_report" action="action_chitiet_vetuchon_trungthuong_report" parent="menu_baocao" sequence="10" groups="group_ql_ve_loto_man"/>
        
    </data>
</openerp>

