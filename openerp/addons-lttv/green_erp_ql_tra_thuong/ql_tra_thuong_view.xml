            <field name="arch" type="xml">
                <form string="Trả thưởng thực tế" version="7.0" create='false' edit='false'>
                	<header>
                        <button name="tao_phieu_chi" type="object" states="new" string="Xác nhận trả thưởng" class="oe_highlight"/>
	                    <button name="quan_ly_duyet" string="Quản lý duyệt" groups="green_erp_ql_tra_thuong.group_ql_tra_thuong_man" attrs="{'invisible':[('show_manager_check','=',False)]}" type="object" class="oe_highlight"/>
	                    <field name="state" widget="statusbar" statusbar_visible="new,done" statusbar_colors='{"new":"blue","done":"blue"}'/>
						<field name="show_manager_check" invisible='1'/>
	                </header>
	                <sheet string="Trả thưởng">
	                    <group>
		                    <group>
		                        <field name="daily_id" options="{'create': false, 'create_edit': false}" domain="[('parent_id','=',False),('dai_ly','=',True)]"/>
		                        <field name="nguoi_nhan_thuong"/>
		                        <field name="journal_id" options="{'create': false, 'create_edit': false}" invisible='1' domain="[('type','in',['cash','bank'])]"/>
		                    </group>
		                    <group>
		                        <field name="ngay"/>
		                        <field name="ngay_tra_thuong"/>
		                    </group>
	                    </group>
	                    <group>
	                        <field name="tra_thuong_line" nolabel='1'>
	                        	<tree editable='bottom'>
	                        		<field name="product_id" options="{'create': false, 'create_edit': false}" on_change="onchange_product(product_id,name,loai,giai,parent.ngay,sl_trung,parent.daily_id)"/>
	                        		<field name="name" invisible='1' on_change="onchange_product(product_id,slan_trung,loai,giai,parent.ngay,sl_trung,parent.daily_id)"/>
			                        <field name="loai" on_change="onchange_product(product_id,slan_trung,loai,giai,parent.ngay,sl_trung,parent.daily_id)"/>
			                        <field name="giai" on_change="onchange_product(product_id,slan_trung,loai,giai,parent.ngay,sl_trung,parent.daily_id)"/>
			                        <field name="sl_trung" on_change="onchange_product(product_id,slan_trung,loai,giai,parent.ngay,sl_trung,parent.daily_id)"/>
			                        <field name="slan_trung" readonly='0'/>
			                        <field name="tong_tien"/>
			                        <field name="tong"/>
	                        	</tree>
	                        </field>
	                        <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                <div class="oe_subtotal_footer_separator oe_inline">
                                    <label for="tong_cong" />
                                </div>
                                <field name="tong_cong" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary'/>
                            </group>
                            <div class="oe_clear"/>
	                    </group>
	                </sheet>
                </form>
            </field>
        </record>
        
