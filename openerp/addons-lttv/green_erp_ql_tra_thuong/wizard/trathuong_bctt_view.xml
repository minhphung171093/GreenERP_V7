<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>   
        <record id="view_trathuong_bctt_report" model="ir.ui.view">
            <field name="name">trathuong.bctt.report</field>
            <field name="model">trathuong.bctt</field>
            <field name="arch" type="xml">
                <form string="Báo cáo trả thưởng" version="7.0">
                    <group col='4' colspan='2'>
                    	<field name='date_from'/>
                    	<field name='date_to'/>
                    </group>
                    <footer>
                        <button name="print_report" string="In" type="object" class="oe_highlight" context="{'type':'appointments'}"/>
                        hoặc
                        <button string="Hủy bỏ" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>        
        <record id="action_trathuong_bctt" model="ir.actions.act_window">
            <field name="name">Báo cáo trả thưởng</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">trathuong.bctt</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
    </data>
</openerp>

