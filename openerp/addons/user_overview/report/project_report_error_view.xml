<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_task_project_error_tree" model="ir.ui.view">
            <field name="name">report.project.task.error.tree</field>
            <field name="model">report.project.task.error</field>
            <field name="arch" type="xml">
                <tree string="Tasks Analysis Error" create="false">
                    <field name="name" invisible="1"/>
                    <field name="project_id" invisible="1"/>
                    <field name="user_id" invisible="1"/>
                    <field name="task_id" invisible="1"/>
                    <field name="state" invisible="1"/>
                    <field name="day" invisible="1"/>
                    <field name="month" invisible="1"/>
                    <field name="year" invisible="1"/>
                    <field name="nbr" sum='# of tasks'/>
                </tree>
            </field>
        </record>

        <record id="view_task_project_error_graph" model="ir.ui.view">
            <field name="name">report.project.task.error.graph</field>
            <field name="model">report.project.task.error</field>
            <field name="arch" type="xml">
                <graph string="Tasks Analysis Error" type="bar">
                     <field name="name"/>
                     <field name="state" group="True"/>
                     <field name="nbr" operator="+"/>
                 </graph>
             </field>
        </record>

        <record id="view_task_project_error_search" model="ir.ui.view">
            <field name="name">report.project.task.error.search</field>
            <field name="model">report.project.task.error</field>
            <field name="arch" type="xml">
                <search string="Tasks Analysis Error">
                    <filter string="New" icon="terp-document-new" domain="[('state','=','draft')]" help = "New tasks"/>
                    <filter string="In progress" icon="terp-check" domain="[('state', '=' ,'open')]" help = "In progress tasks"/>
                    <filter string="Pending" icon="terp-gtk-media-pause" domain="[('state','=','pending')]" help = "Pending tasks"/>
                    <filter string="Done" icon="terp-dialog-close" name="done" domain="[('state','=','done')]"/>
                    <separator/>
                    <filter icon="terp-folder-violet" string="My Projects" help="My Projects" domain="[('project_id.user_id','=',uid)]"/>
                    <separator/>
                    <filter icon="terp-personal" string="My Task" help = "My tasks" domain="[('user_id','=',uid)]" />
                    <filter icon="terp-personal-" string="Non Assigned Tasks to users" help="Non Assigned Tasks to users" domain="[('user_id','=',False)]"/>
                    <field name="project_id"/>
                    <field name="user_id"/>
                    <group expand="0" string="Extended Filters...">
                    </group>
                    <group expand="1" string="Group By...">
                        <filter string="Project" name="project" icon="terp-folder-violet" context="{'group_by':'project_id'}"/>
                        <filter string="Error" name="error" icon="terp-stock_align_left_24" context="{'group_by':'name'}" />
                        <filter string="Year" name='year' icon="terp-go-year" context="{'group_by':'year'}" help="Creation Date"/>
                        <filter string="Month" name='month' icon="terp-go-month" context="{'group_by':'month'}" help="Creation Date"/>
                        <filter string="Assigned to" name="User" icon="terp-personal" context="{'group_by':'user_id'}" />
                        <filter string="Task" name="task" icon="terp-folder-violet" context="{'group_by':'task_id'}"/>
                        <filter string="Day" icon="terp-go-today" context="{'group_by':'day'}" help="Creation Date"/>
                    </group>
                </search>
            </field>
        </record>

       <record id="action_project_task_error_tree" model="ir.actions.act_window">
            <field name="name">Tasks Analysis Error</field>
            <field name="res_model">report.project.task.error</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,graph</field>
            <field name="search_view_id" ref="view_task_project_error_search"/>
            <field name="context">{'search_default_User':1,'search_default_month':1,'search_default_year':1,'group_by_no_leaf':1,'group_by':[]}</field>
            <field name="help">This report allows you to analyse the performance of your projects and users. You can analyse the quantities of tasks, the hours spent compared to the planned hours, the average number of days to open or close a task, etc.</field>
        </record>

        <menuitem action="action_project_task_error_tree" id="menu_project_task_error_tree" parent="base.menu_project_report"/>

    </data>
</openerp>
