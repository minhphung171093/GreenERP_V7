<?xml version="1.0" encoding="utf-8"?>
<openerp>
 <data>
	
		<record id="view_working_summary_search_form" model="ir.ui.view">
            <field name="name">working.summary.search.form</field>
            <field name="model">working.summary</field>
            <field name="arch" type="xml">
                <search string="Working Summary">
                    <filter icon="terp-go-today" string="Today" name="today" domain="[('name','&gt;=',current_date),('name','&lt;=',current_date)]" />
                    <group expand="0" string="Group By...">
                        <filter name="user_id" string="User" icon="terp-personal" domain="[]" context="{'group_by':'user_id'}"/>
                        <filter string="Day" icon="terp-go-today" domain="[]" context="{'group_by':'date'}"/>
                        <filter string="Month" icon="terp-go-today" domain="[]" context="{'group_by':'day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_working_summary_tree2" model="ir.ui.view">
            <field name="name">working.summary.tree</field>
            <field name="model">working.summary</field>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Working Summary">
                    <field name="user_id" />
                    <field name="date" invisible='1'/>
                    <field name="day" />
                    <field name="login" />
                    <field name="logout" />
                    <field name="total_attendance" />
                    <field name="total_timesheet"/>
                    <field name="difference_time" />
                </tree>
            </field>
        </record>
        
        <record id="working_summary_view_form" model="ir.ui.view">
            <field name="name">working.summary</field>
            <field name="model">working.summary</field>
            <field name="arch" type="xml">
                <form string="Working Summary" version="7.0">
                	<sheet>
                		<group>
                			<group>
	                            <field name="user_id" />
	                            <field name="date" invisible='1'/>
			                    <field name="day" />
			                    <field name="login" />
			                    <field name="logout" />
			                </group>
			                <group>
			                    <field name="total_attendance" />
			                    <field name="total_timesheet"/>
			                    <field name="difference_time" />
	                    	</group>
	                    </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="working_summary_action_form" model="ir.actions.act_window">
            <field name="name">Working Summary</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">working.summary</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="context">{"search_default_today":1}</field>
            <field name="search_view_id" ref="view_working_summary_search_form"/>
            <field name="view_id" ref="view_working_summary_tree2"/>
        </record>
        
        <menuitem action="working_summary_action_form"
            id="menu_working_summary"
            parent="user_overview.user_overview1" sequence="30"
            groups="project.group_project_manager"/>
            
   </data>  
</openerp>
