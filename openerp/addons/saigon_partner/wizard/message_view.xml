<?xml version="1.0" encoding="utf-8"?>
<openerp>
 <data>
	
   		<record id="message_view_form" model="ir.ui.view">
            <field name="name">message.form</field>
            <field name="model">message.send</field>
            <field name="arch" type="xml">
                <form string="Message" version="7.0">
                	<h2>
            			<label string="Message"/>
            		</h2>
                	<field name="name"/>
                    <footer>
                        <button name="save" string="Send" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
        			</footer>
                </form>
            </field>
        </record>

        <record id="action_message" model="ir.actions.act_window">
            <field name="name">Message</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">message.send</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="message_view_form"/>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>

   </data>  
</openerp>
