<?xml version="1.0" encoding="utf-8"?>
<openerp>
 <data>
        
        <record id="account_invoice_view_tree_inherit" model="ir.ui.view">
            <field name="name">account.invoice.view.tree.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree"/>
            <field name="arch" type="xml">
                <data>
                
                	<xpath expr="//field[@name='partner_id']" position="after">
                        <field name="partner_ref"/>
                    </xpath>

                </data>
            </field>
        </record>
        
        <record id="account_invoice_view_form_inherit" model="ir.ui.view">
            <field name="name">account.invoice.view.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <data>
                
                	<xpath expr="//field[@name='partner_id']" position="after">
                        <field name="partner_ref"/>
                    </xpath>

                </data>
            </field>
        </record>
		        
   </data>  
</openerp>
