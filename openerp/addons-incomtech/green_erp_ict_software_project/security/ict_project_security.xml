<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data noupdate="0">
	
		<record model="ir.module.category" id="module_category_software_project_management">
            <field name="name">Software Project</field>
            <field name="sequence">3</field>
        </record>
	
	    <record id="group_software_project_user" model="res.groups">
	        <field name="name">User</field>
	        <field name="category_id" ref="module_category_software_project_management"/>
	        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
	    </record>
	    
	    <record id="group_software_project_leader" model="res.groups">
	        <field name="name">Leader</field>
	        <field name="category_id" ref="module_category_software_project_management"/>
	        <field name="implied_ids" eval="[(4, ref('group_software_project_user'))]"/>
	    </record>
	
	    <record id="group_software_project_manager" model="res.groups">
	        <field name="name">Manager</field>
	        <field name="category_id" ref="module_category_software_project_management"/>
	        <field name="implied_ids" eval="[(4, ref('group_software_project_leader'))]"/>
	        <field name="users" eval="[(4, ref('base.user_root'))]"/>
	    </record>
	
	</data>
	<data noupdate="1">

	    <record model="ir.rule" id="duan_phanmem_manager_rule">
	        <field name="name">Project: project manager: see all</field>
	        <field name="model_id" ref="model_duan_phanmem"/>
	        <field name="domain_force">[(1, '=', 1)]</field>
	        <field name="groups" eval="[(4,ref('group_software_project_manager'))]"/>
	    </record>
	
	    <record model="ir.rule" id="duan_phanmem_members_rule">
	        <field name="name">Project: Members</field>
	        <field name="model_id" ref="model_duan_phanmem"/>
	        <field name="domain_force">['|',('user_id','=',user.id),('team_line.user_id', 'in', [user.id])]</field>
	        <field name="groups" eval="[(4, ref('group_software_project_user'))]"/>
	    </record>
	    
	    <record model="ir.rule" id="nhom_congviec_manager_rule">
	        <field name="name">Nhom cong viec: project manager: see all</field>
	        <field name="model_id" ref="model_nhom_congviec"/>
	        <field name="domain_force">[(1, '=', 1)]</field>
	        <field name="groups" eval="[(4,ref('group_software_project_manager'))]"/>
	    </record>
	
	    <record model="ir.rule" id="nhom_congviec_members_rule">
	        <field name="name">nhom_congviec: Members</field>
	        <field name="model_id" ref="model_nhom_congviec"/>
	        <field name="domain_force">['|',('user_id','=',user.id),('duan_id.team_line.user_id', 'in', [user.id])]</field>
	        <field name="groups" eval="[(4, ref('group_software_project_user'))]"/>
	    </record>
	    
	    <record model="ir.rule" id="cong_viec_manager_rule">
	        <field name="name">cong viec: project manager: see all</field>
	        <field name="model_id" ref="model_cong_viec"/>
	        <field name="domain_force">[(1, '=', 1)]</field>
	        <field name="groups" eval="[(4,ref('group_software_project_manager'))]"/>
	    </record>
	
	    <record model="ir.rule" id="cong_viec_members_rule">
	        <field name="name">congviec: Members</field>
	        <field name="model_id" ref="model_cong_viec"/>
	        <field name="domain_force">['|',('user_id','=',user.id),('duan_id.team_line.user_id', 'in', [user.id])]</field>
	        <field name="groups" eval="[(4, ref('group_software_project_user'))]"/>
	    </record>
	
	</data>
</openerp>
